body{
  background-color: #f2f2f2;
}

.page-content{
  display: table;
  margin: 0 auto;
  width: 770px;

  .username{
    margin-top: 1em !important;
    margin-bottom: 1em !important;
    font-size: 18px;
    font-weight: 600;
    color: #4a4a4a;
  }

  .user-profile{
    height: 150px;
    width: 350px;
    background-color: #fff;
    float: left;
    border-radius: 5px;
    border: 1px solid #cdcdcd;

    .avatar{
      border-radius: 50%;
      height: 75px;
      width: 75px;
      object-fit: cover;
    }

    #user-name{
      font-size: 20px;
      font-weight: 600;
      color: #4a4a4a;
    }
  }

  .request-box{
    height: 290px;
    width: 350px;
    background-color: #fff;
    float: left;
    border-radius: 5px;
    border: 1px solid #cdcdcd;
    margin-top: 15px;

    .lease-buy-item{
      background-color: #7ed321;
      color: #fff;
      margin: 0 auto;
      display: table;
      padding: 10px 20px;
      border-radius: 4px;
      &:hover{
        background-color: #5AC902;
        color: #fff;
        transition: all .3s ease-in-out;
      }
    }

    .item-image {
      width: 100px;
      height: 100px;
      object-fit: cover;
      object-position: center;
    }

    #heading{
      text-align: center;
      font-weight: 600;
      color: #4a4a4a;
      margin-bottom: 5px;
    }

    #item-title{
      text-align: center;
      color: #4a4a4a;
      margin: 0 auto;
      display: table;
      line-height: normal;
    }

    #status{
      color: #4a4a4a;
      font-weight: 500;
      margin-bottom: -5px;
    }

    .listings {
      list-style: none;
      .item-edit-delete-buttons{
        margin-top: 25px;

        .edit-item{
          border: 1px solid #419bf9;
          border-radius: 5px;
          color: #419bf9;
          font-size: 15px;
          padding: 5px 50px 5px;
          &:hover{
            background-color: #419bf9;
            color: #fff;
            transition: all .3s ease-in-out;
          }
        }

        .delete-item{
          border: 1px solid #FF6678;
          border-radius: 5px;
          color: #FF6678;
          font-size: 15px;
          padding: 5px 52px 5px;
          margin-left: 5px;
          &:hover{
            background-color: #FF6678;
            color: #fff;
            transition: all .3s ease-in-out;
          }
        }
      }
    }
  }

  .helpful-tip{
    float: left;
    #seller{
      width: 350px;
      text-align: left;
      line-height: normal;
      color: #FF6678;
      font-weight: 500;
      font-size: 15px;
    }
  }

/*chat area*/
  .chat-area{
    float: right;
    height: 850px;

  #ui-segment {
    height: 450px;
    overflow-y: scroll;
  }

  .chat-content{
    display: table;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 5px 5px 0px 0px;
    width: 400px;
    height: 450px;
    overflow: hidden;

    .chat-bubble, .opp-chat-bubble{
      margin-top: 10px;
      font-size: 14px;
      border-radius: 10px;
      clear:both;
      margin-right: 5px;
      margin-left: 25px;

      .bubble-text{
        padding: 10px;
        text-align: left;
        line-height: normal;
      }
    }
    .chat-bubble{
      background-color: #419BF9;
      float:right;
      color: #fff;
      margin-left: 6em !important;
    }
    .opp-chat-bubble{
      background-color: #e4e4e4;
      float:left;
      color: black;
      margin-left: 5px !important;
      margin-right: 6em;
    }
    .chat-time, .opp-chat-time{
      font-size: 10px !important;
      color: #979797;
      margin-top: 3px;
      clear: both;
    }
    .chat-time{
      margin-right: 10px;
      float:right;
    }
    .opp-chat-time{
      float:left;
      margin-left: 10px;
    }
  }
    .reply-field{
      display: table;
      margin: 0 auto;
      background-color: #fff;
      border-radius: 0px 0px 5px 5px;
      padding: 10px;
      width: 350px;
      margin-bottom: 3em;

      #message_body{
        border-style: solid none none none;
        border-top: 1px solid #eaeaea;
        width: 350px;
        height: 40px;
        font-size: 13px;
        padding: 15px;

      }
      input:focus, textarea {
        outline: none !important;
        resize: none;
        }

      .reply_btn{
        border-radius: 2px;
        cursor: pointer;
        background-color: #419BF9;
        border: none;
        color: #fff;
        padding: 4px;
        width: 100px;
        height: 33px;
        font-size: 14px;
        float: right;
        margin: 5px 10px;
        &:hover{
          background-color: #fff;
          color: #419BF9;
          border: 1px solid #419BF9;
        }
      }
    }
  }
}
