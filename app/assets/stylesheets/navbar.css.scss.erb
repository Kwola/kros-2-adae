body {
  padding-top: 62px;
}

input:focus, textarea {
  outline: none !important;
  }

#home-navbar {
  height: 60px;
  width: 100%;
  background-color: #fff;
  position: absolute;
  border: 1px solid #eaeaea;
  top: 0px;
  left: 0px;
  z-index: 3;

  .adae-home {
    width: 110px;
    height: 60px;
    border-style: none solid none none;
    border-right: 1px solid #eaeaea;

    .home-logo {
      height: 60px;

        img {
          margin-top: 15px;
          margin-left: 15px;
          height: 30px;
        }
      }
  }

    .search-bar {
      position: absolute;
      top: 0px;

      form {
       width:0;
       height:0;
       margin-left: 145px;
      }

      .search-field-placeholder {
        margin-top: 5px;
        width: 440px;
        height: 50px;
        padding:1px 0px 0px 38px;
        background: url(<%= asset_path 'search.png'%>) no-repeat 6px 13px;
        border: none;
        background-color: #fff;
        color: #6f6f6f;
        font-size: 13px;
        font-weight: 380;
      }
    }

    .itemnav {
      position: absolute;
      top: 22px;
      right: 423px;

      .share-item {
        background-color: #fff;
        border: 2px solid #419bf9;
        border-radius: 5px;
        font-size: 13px;
        font-weight: 600;
        padding: 14px 14px 14px 14px;
        color: #419bf9;
        margin-right: 5px;

        &:hover {
          background-color: #419bf9;
          color: #fff;
          transition: all .3s ease-in-out;
        }
      }

      .listings {
          color: #419bf9;
          padding: 20px 62px 20px 20px;
          border-style: none none none solid;
          border-left: 1px solid #eaeaea;
          cursor: pointer;
      }

      .listingsdropdown {
        padding: 20px;
        display:none;
        background-color: white;
        border-left: 1px solid #eaeaea;
        border-right: 1px solid #eaeaea;
        border-bottom: 1px solid #eaeaea;
      }

      .listingsdropdown a {
        display:block;
        &:hover{
          color: #419bf9;
        }
      }

      .newlisting {
        color: black;
        padding: 20px 0 20px 0;
        border-style: none none solid none;
        border-bottom: 1px solid #eaeaea;
      }

      .allistings {
        color: black;
        padding: 20px 0 20px 0;
        border-style: none none solid none;
        border-bottom: 1px solid #eaeaea;
      }

      .profilepath {
        color: black;
        padding: 20px 0 20px 0;
        border-style: none none solid none;
        border-bottom: 1px solid #eaeaea;
      }
    }

    .requestnav {
      position: absolute;
      top: 22px;
      right: 259px;

      .share-request {
        background-color: #fff;
        border: 2px solid #f5a623;
        border-radius: 5px;
        font-size: 13px;
        font-weight: 600;
        padding: 14px 14px 14px 14px;
        color: #f5a623;
        margin-right: 28px;

        &:hover {
          background-color: #f5a623;
          color: #fff;
          transition: all .3s ease-in-out;
        }
      }

      .shoutouts {
          color: #f5a623;
          padding: 20px 62px 20px 20px;
          border-style: none none none solid;
          border-left: 1px solid #eaeaea;
          cursor: pointer;
      }

      .shoutoutsdropdown {
        padding: 20px;
        display:none;
        background-color: white;
        border-left: 1px solid #eaeaea;
        border-right: 1px solid #eaeaea;
        border-bottom: 1px solid #eaeaea;
      }
       .shoutoutsdropdown a {
        display:block;
        &:hover{
          color: #f5a623;
        }
      }

      .newshoutout {
        color: black;
        padding: 20px 0 20px 0;
        border-style: none none solid none;
        border-bottom: 1px solid #eaeaea;
      }

      .allshoutouts {
        color: black;
        padding: 20px 0 20px 0;
        border-style: none none solid none;
        border-bottom: 1px solid #eaeaea;
      }

      .profilepath {
        color: black;
        padding: 20px 0 20px 0;
        border-style: none none solid none;
        border-bottom: 1px solid #eaeaea;
      }
    }

    .inbox{
      position: absolute;
      top: 20px;
      right: 155px;

      .message-space{
        border-style: none none none solid;
        border-left: 1px solid #eaeaea;
        padding: 23px 24px 20px 15px;

        #sms{
          height: auto;
          width: 20px;
          margin-top: 1px;
          margin-bottom: -5px;
        }
      }
    }

    .user-info {
      position: absolute;
      top: 22px;
      right: 0px;

      .userpaths {
        color: black;
        padding: 26px 60px 20px 60px;
        border-style: none none none solid;
        border-left: 1px solid #eaeaea;
        cursor: pointer;
      }

      .dropdown {
        padding: 20px;
        display:none;
        background-color: white;
        border-left: 1px solid #eaeaea;
        border-right: 1px solid #eaeaea;
        border-bottom: 1px solid #eaeaea;
      }

      .dropdown a {
        display:block;

        &:hover{
          color: #419bf9;
        }
      }


      .profilepath {
        color: black;
        padding: 20px 0 20px 0;
        border-style: none none solid none;
        border-bottom: 1px solid #eaeaea;
      }

      .logout {
        color: black;
        padding: 20px 0 20px 0;
      }

      .signup {
        color: #419bf9;
        padding: 20px;
        border-style: none none none solid;
        border-left: 1px solid #eaeaea;
      }

      .login {
        color: black;
        padding: 20px;
        border-style: none none none solid;
        border-left: 1px solid #eaeaea;
      }
    }

    .avatar{
      border-radius: 50%;
      height: 20px;
      width: 20px;
      margin-right: 33px;
      margin-top: -42px;
      object-fit: cover;
      float: right;
    }
}
