body {
  padding-top: 70px;
}

#home-navbar {
  height: 60px;
  width: 100%;
  background-color: #fff;
  padding-left: 35px;
  position: absolute;
  border: 1px solid #bbbbbb;
  top: 0px;
  left: 0px;
  z-index: 1;

    .adae-nav {
      width: 70px;
      height: 60px;
      border-style: none solid none none;
      border-right: 1px solid #bbbbbb;

      img {
        margin-top: 15px;
        margin-left: -20px;
      }
    }

    .search-bar {
      top: 0px;
      position: absolute;
      padding-left: 45px;

      .search-field-placeholder {
        margin-left: 55px;
        margin-top: 6px;
        width: 440px;
        height: 50px;
        padding:1px 0px 0px 38px;
        background: url(<%= asset_path 'search.png'%>) no-repeat 6px 13px;
        border: none;
        background-color: #fff;
        color: #6f6f6f;
        font-size: 13px;
        font-weight: 380;
      }
    }

    .share-item {
      position: absolute;
      top: 8px;
      right: 100px;
      background-color: #fff;
      border: 2px solid #419bf9;
      border-radius: 5px;
      font-size: 13px;
      font-weight: 600;
      padding: 14px 28px 14px 20px;
      color: #419bf9;
      
      &:hover {
              background-color: #275d95;
      }
    }


}