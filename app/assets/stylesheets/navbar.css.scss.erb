    .avatar{
      border-radius: 50%;
      height: 20px;
      width: 20px;
      margin-right: 33px;
      margin-top: -42px;
      object-fit: cover;
      float: right;
    }
}

.c-button {
  background-image: url(<%= asset_path 'hamburger.png' %>);
  background-repeat: no-repeat;
  background-color: white;
  width: 26px;
  height: 20px;
  position: absolute;
  background-size: 22px 18px;
  top: 20px;
  left: 20px;
  display: none;
}

.c-menu {
  position: fixed;
  z-index: 200;
  background-color: #67b5d1;
  transition: transform 0.3s;
}

.c-menu__items {
  list-style: none;
  margin: 0;
  padding: 0;
}


.c-menu__close {
  color: #fff;
  background-color: #3184a1;
  font-size: 14px;
  border: none;
  box-shadow: none;
  border-radius: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  cursor: pointer;
}

.c-menu__close:focus {
  outline: none;
}

body.has-active-menu {
  overflow: hidden;
}

.c-mask {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  overflow: hidden;
  width: 0;
  height: 0;
  background-color: #000;
  opacity: 0;
  transition: opacity 0.3s, width 0s 0.3s, height 0s 0.3s;
}

.c-mask.is-active {
  width: 100%;
  height: 100%;
  opacity: 0.7;
  transition: opacity 0.3s;
}

.c-menu--slide-left{
  width: 300px;
  height: 100%;
  overflow-y: scroll;
  top: 0;
  left: 0;
  transform: translateX(-300px);
  -webkit-transform: translateX(-300px);
}

o-wrapper {
  display: none;
}

@media screen and (min-width: 320px) and (max-width: 1024px){
  /**.nav {
    display: none;
  }**/

  /**body {
    padding-top: 0px;
  }**/

  #home-navbar{
    width: 99.8%;
    border-right: none;
  }

  .adae-home {
    display: none;
  }

  .itemnav {
    display: none;
  }

  .balance-display {
    display: none;
  }

  .requestnav {
    display: none;
  }

  .inbox {
    display: none;
  }

  .user-info {
    display: none;
  }

  .navbar-avatar {
    display: none;
  }

  .search-bar {
    form {
      margin-left: 70px !important;
    }
  }

  .search-field-placeholder {
    width: 160px !important;
  }

  .c-button {
    display: block;
  }


  .c-menu--slide-left {
    background-color: #2E2E3B;
  }

  .c-menu--slide-left .c-menu__item {
    display: block;
    text-align: left;
    border: none;
  }

  .c-menu--slide-left .c-menu__item:first-child {
    border-top: none;
  }

  .c-menu--slide-left .c-menu__item:last-child {
    border-bottom: none;
  }

  .c-menu--slide-left .c-menu__link {
    display: block;
    padding: 12px 24px;
    color: #fff;
    font-weight: 500;
    font-size: 18px;
  }

  .c-menu--slide-left .c-menu__close {
    display: block;
    padding: 12px 10px;
    text-align: right;
    font-size: 20px;
    width: 100%;
    background-color: #2E2E3B;
  }

  .c-menu--slide-left.is-active {
    transform: translateX(0);
    -webkit-transform: translateX(0);
  }
}
