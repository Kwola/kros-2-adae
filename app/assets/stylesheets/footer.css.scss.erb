.footer{
  background-color: #2E2E3B;
  width: 100%;
  bottom: 0;

  .footer-sections {
    text-align: center;
    li {
      font-weight: 400;
      list-style-type: none;
      color: #fff;
      font-size: 14px;
      padding: 7px 40px;
      text-align: left;
      a {
        &:hover {
          opacity: .6;
          }
      }
    }

    .about-us-list, .list-name {
      padding: 30px;
      display: inline-block;
      vertical-align: top;

    .header {
      font-size: 16px !important;
      font-weight: 600 !important;
      color: #fff;
      }
    }

    .list-name {
      .coming-soon-footer{
        height: 45px;
        width: auto;
      }

      #social-fb{
        height:30px;
        cursor: pointer;
        &:hover {
  				opacity: .9;
  	      }
      }

      #social-twitter{
        height:30px;
        cursor: pointer;
        &:hover {
  				opacity: .9;
  	      }
      }

      #stripe{
        width:auto;
        height:30px;

        &:hover {
  				opacity: .9;
  	      }
      }
    }
  }
}

@media screen and (min-width: 320px) and (max-width: 768px){
  .footer-sections {
    display: table;
    margin: 0 auto;
    margin-left: -2em;

    li {
      text-align: center !important;
    }

    .about-us-list, .list-name {
      text-align: center;
    }

  }
}
