.footer{
  background-color: #2E2E3B;
  height: 100%;
  width: 100%;
  bottom: 0;
  float:left;

  .footer-sections{
    margin-left: 10%;
    li {
      font-weight: 400;
      list-style-type: none;
      color: #fff;
      font-size: 14px;
      padding: 7px 50px;
      text-align: left;
    }


  .about-us-list{
    padding: 30px;
    float: left;


  #header{
    font-size: 16px !important;
    font-weight: 600 !important;
    }
  }

  .list-name{
    padding: 30px;
    float: left;

    #header-2{
      font-size: 16px !important;
      font-weight: 600 !important;
      color: #fff;
      float: left;
      padding-top: 7px;
      }

      #coming-soon-footer{
        width:auto;
        height: 100px;
        padding-top: 10px;
        padding-right: 10px;
      }

      #social-fb{
        width:auto;
        height:30px;
        float:left;
        margin-top: .6em;
      }

      #social-twitter{
        width:auto;
        margin-top: .6em;
        height:30px;
        float:right;
      }

      #stripe{
        width:auto;
        margin-top: .6em;
        height:30px;

        &:hover {
  				opacity: .9;
  	      }
      }

    }

  }

}
