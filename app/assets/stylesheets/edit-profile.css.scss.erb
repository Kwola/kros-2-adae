body{
  background-color: #f2f2f2;
}

h1{
  color: #4a4a4a;
  font-weight: 600;
  background-color: #fff;
  padding: 1.5em;
  margin-top: 0px;
}

label{
  margin-bottom: 5px;
  font-weight: 400;
  color: #4a4a4a;
  font-size: 17px;
}

.field-content{
  display: table;
  margin: 0 auto;

  p{
    font-size: 17px;
    text-align: left;
    margin-bottom: 5px;
    font-weight: 400;
    color: #4a4a4a;
  }

  .field{
    margin-top: 13px;

    #user_name{
      border: 1px solid #979797;
      border-radius: 3px;
      padding: 5px;
      font-size: 13px;
    }

    #user_surname{
      border: 1px solid #979797;
      border-radius: 3px;
      padding: 5px;
      font-size: 13px;
    }

    #user_email{
      border: 1px solid #979797;
      border-radius: 3px;
      padding: 5px;
      font-size: 13px;
    }

    #user_phone_number{
      border: 1px solid #979797;
      border-radius: 3px;
      padding: 5px;
      font-size: 13px;
      width: 100px;
    }

    #user_description{
      border: 1px solid #979797;
      border-radius: 3px;
      padding: 5px;
      font-size: 13px;
      width: 300px;
      height: 100px;
    }

    #user_password{
      border: 1px solid #979797;
      border-radius: 3px;
      padding: 5px;
      font-size: 13px;
    }

    #user_password_confirmation{
      border: 1px solid #979797;
      border-radius: 3px;
      padding: 5px;
      font-size: 13px;
    }

    .update-button{
			border: 1px solid #419bf9;
			background-color: #fff;
			border-radius: 5px;
			font-size: 15px;
			font-weight: 600;
			color: #4a4a4a;
			padding: 10px;
			margin-top: 10px;
			margin-bottom:15px;
			cursor: pointer;

			&:hover{
				background-color: #419BF9;
				color: #fff;
			}
    }
  }
}

    .profile-info{
      height: 185px;
      .avatar{
        margin-top: 5px !important;
        height: 80px !important;
        width: auto !important;
      }

      h1{
        margin: -15px 0px -15px 0px !important;
      }
    }

  .item-reviews{
      margin-top: 16em;

      .review-title{
        font-size: 19px;
        font-weight: 500;
        display: table;
        color: #4a4a4a;
        margin-top: 1em;
        margin-bottom: -30px;
        text-transform: none;
        text-align: left;
        line-height: normal;
      }

      .item-title{
        font-size: 17px;
        font-weight: 500;
        color: #419bf9;
        margin-top: 35px;
        &:hover{
          text-decoration: underline;
        }
      }

    .review{
      width: 100%;
      margin: 0 auto;
      padding-bottom: 1em;

        #comment{
          #review-comment{
            line-height: normal;
            margin-left: 80px;
            color: #4a4a4a;
          }

          .avatar{
            border-radius: 50%;
            float: left;
            margin-right: 20px;
            margin-top: 3px;
            height: 55px;
            width: 55px;
            object-fit: cover;
          }
        }
        p{
          text-align: left;
        }
        .poster{
          color: #979797;
          margin-left: 80px;
        }
      }

      #no-review-yet{
        background-color: #dcdcdc;
        border-radius: 5px;
        margin-left: 1px;
        padding: 13px 0px 13px 0px;
        text-align: center;
        width: 30%;
        color: gray;
      }

      .rating-container{
        border: 1px solid #979797;
        background-color: #fff;
        width: 56px;
        height: 56px;
        border-radius: 5px;
        padding: 5px;
        margin: -1em 0px 0px 5em;

        .rating {
          color: #EADB1E;
          font-size: 30px;
          font-weight: 600;
          text-align: center;
          margin-top: 13px;
        }
      }
  }
@media screen and (min-width: 320px) and (max-width: 800px){
  .profile-info{
    .avatar{
      margin-top: 10px !important;
      height: 80px !important;
      width: auto !important;
    }

    h1{
      margin: -15px 0px -25px 0px !important;
    }
  }

  .item-reviews{
      margin-top: 13em;
      display: table;
      margin: 0 auto;
      width: 90%;
      .item-title{
        line-height: normal;
      }

    .review{
      width: 100%;

        #comment{
          #review-comment{
            line-height: normal;
            margin-left: 80px;
            color: #4a4a4a;
          }

          .avatar{

          }
        }
        p{
          text-align: left;
        }
        .poster{
          line-height: normal;
        }
      }

      #no-review-yet{
        width: 99%;

      }

      .rating-container{


        .rating {

        }
      }
  }
}
