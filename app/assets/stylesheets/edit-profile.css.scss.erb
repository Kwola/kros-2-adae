body{
  background-color: #f2f2f2;
}

h1{
  color: #4a4a4a;
  font-weight: 600;
  background-color: #fff;
  padding: 1.5em;
  margin-top: 0px;
}

label{
  margin-bottom: 5px;
  font-weight: 400;
  color: #4a4a4a;
  font-size: 17px;
}

.field-content{
  display: table;
  margin: 0 auto;

  p{
    font-size: 17px;
    text-align: left;
    margin-bottom: 5px;
    font-weight: 400;
    color: #4a4a4a;
  }

  .field{
    margin-top: 13px;

    #user_name{
      border: 1px solid #979797;
      border-radius: 3px;
      padding: 5px;
      font-size: 13px;
    }

    #user_surname{
      border: 1px solid #979797;
      border-radius: 3px;
      padding: 5px;
      font-size: 13px;
    }

    #user_email{
      border: 1px solid #979797;
      border-radius: 3px;
      padding: 5px;
      font-size: 13px;
    }

    #user_phone_number{
      border: 1px solid #979797;
      border-radius: 3px;
      padding: 5px;
      font-size: 13px;
      width: 100px;
    }

    #user_description{
      border: 1px solid #979797;
      border-radius: 3px;
      padding: 5px;
      font-size: 13px;
      width: 300px;
      height: 100px;
    }

    #user_password{
      border: 1px solid #979797;
      border-radius: 3px;
      padding: 5px;
      font-size: 13px;
    }

    #user_password_confirmation{
      border: 1px solid #979797;
      border-radius: 3px;
      padding: 5px;
      font-size: 13px;
    }

    .update-button{
			border: 1px solid #419bf9;
			background-color: #fff;
			border-radius: 5px;
			font-size: 15px;
			font-weight: 600;
			color: #4a4a4a;
			padding: 10px;
			margin-top: 10px;
			margin-bottom:15px;
			cursor: pointer;

			&:hover{
				background-color: #419BF9;
				color: #fff;
			}
    }
  }
}
