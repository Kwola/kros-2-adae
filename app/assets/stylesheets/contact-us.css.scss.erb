body{
  background-color: #f2f2f2;
}

.contact-page-header {
  height: 200px;
  background-color: #fff;
  display: table;
  width: 100%;

  .contact-page-header-text-container {
    display: table-cell;
    vertical-align: middle;
    color: #4a4a4a;
    h1{
      font-size: 40px;
      font-weight: 500;
      margin-bottom: -10px;
    }
  }

  .contact-subtitle{
    text-align: center;
    font-weight: 400;
    color: #4a4a4a;
  }
}

.content-container{
  display: table;
  margin: 0 auto;

  h4{
    font-size: 16px;
    font-weight: 400;
    margin-bottom: 5px;
    color: #4a4a4a;
  }

  .drop-down{
    font-size: 14px;
    border: 1px solid #979797;
    height: 28px;
    width: 200px;
    background-color: #fff;
    color: #419bf9;
  }

  label{
    font-size: 16px;
    color: #4a4a4a;
    margin-top: 10px;
    margin-bottom: 5px;
  }

  input{
    width: 178px;
    border-radius: 4px;
    border: 1px solid #979797;
    font-size: 14px;
    height: 10px;
    padding: 10px;
  }

  textarea{
    border-radius: 4px;
    border: 1px solid #979797;
    padding: 10px;
    font-size: 14px;
    width: 400px;
    height: 100px;
  }

  button{
    width: 135px;
    border: 1px solid #419bf9;
    background-color: #fff;
    border-radius: 5px;
    font-size: 14px;
    font-weight: 600;
    color: #4a4a4a;
    padding: 10px;
    margin-top: 1em;
    margin-bottom:10px;
    cursor: pointer;

    &:hover{
      background-color: #419BF9;
      color: #fff;
    }
  }
}
