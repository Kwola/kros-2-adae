/*
requests INDEX/SEARCH
*/
$orange: #f5a623;

#requests {
	margin-bottom: 0px;

	.switch {
		margin: 20px;
		margin-left: 12px;
		.share-item {
	        background-color: #fff;
	        border: 1px solid #419bf9;
	        border-radius: 5px;
	        font-size: 15px;
	        font-weight: 500;
					padding: 7px 25px 7px 25px;
	        color: #419bf9;
	        margin-right: 5px;

	        &:hover {
	          background-color: #419bf9;
	          color: #fff;
	          transition: all .3s ease-in-out;
	        }
	    }
	    .share-request {
	        background-color: #fff;
	        border: 1px solid #f5a623;
	        border-radius: 5px;
	        font-size: 15px;
	        font-weight: 500;
	        padding: 7px 14px 7px 14px;
	        color: #f5a623;
	        margin-right: 28px;

					&:link{
            background-color: #fff;
            color: $orange;
          }

          &:visited{
            background-color: $orange;
            color: #fff;
          }

          &:hover {
            background-color: $orange;
            color: #fff;
            transition: all .3s ease-in-out;
          }

          &:active{
            background-color: $orange;
            color: #fff;
          }
	    }
	}

	#request-map{
	    position: absolute;
	    z-index: 0 !important;
	    height: 92vh;
	    width: 50%;
	    top: 60px;
	    right: 0;
	    //background-image: asset-url('coming-soon-map.png');
	    //background-size: cover;
	    //background-position: center;
  }
	#request-feed-container {
			height: 90vh;
	    overflow-y: scroll;
	    position: relative;
	    padding-right: 5px;
	    padding-top: 10px;
			padding-left:  10px;
	    width: 48%;
			background: #f2f2f2;

	    #pagination-shout {
	      margin-top: 15px;
	      padding-bottom: 15px;
	      .pagination {

	        .current {
	          margin-right: 5px;
	          padding: 4px 10px 2px 10px;
	          background: #419bf9;
	          color: #fff;
	          border-radius: 70%;
	          font-style: normal;
	          font-weight: 500;
	        }

	        a {
	          margin-right: 5px;
	          padding: 3px 9px 2px 10px;
	          border: 1px solid #979797;
	          background-color: #fff;
	          color: #419bf9;
	          border-radius: 70%;

	          &:hover{
	            color: #fff;
	            background-color: #419bf9;
	            transition: all .3s ease-in-out;
	          }
	        }

	        .next_page{
	          padding: 3px 9px 2px 10px;
	        }

	        .previous_page{
	          padding: 3px 9px 2px 10px;
	        }

	        .disabled{
	          color: #dcdcdc;
	          padding: 3px 9px 2px 10px;
	          border: 1px solid #dcdcdc;
	          border-radius: 70%;
	          margin-right: 5px;
	        }
	      }
	    }
		#request-collection {
		    width: 99%;

			.request-index {
				border: 1px solid #f5a623;
				border-radius: 4px;
				background-color: #fff;
				margin-bottom: 10px;
				display: inline-block;
		    width: 100%;

		        .request-wrap {
		          width: 100%;
							padding-bottom: 20px;

		          .request-expiry {
		          	font-size: 11px;
		          	float: right;
		            font-weight: 500;
		          	margin-right: 15px;
		          	margin-top: -12px;
		            line-height: normal;
		            display: inline;
								color: #979797;
		          }
		          .request-user {
		          	font-size: 15px;
		            font-weight: 500;
		            margin-left: 15px;
		        		margin-top: 15px;
		            line-height: normal;
								width: 20px;


				        .avatar{
				          border-radius: 50%;
				          border: 1px solid #fff;
				          height: 50px;
				          width: 50px;
				          margin-right: 10px;
				          object-fit: cover;
				        }
		          }
		          #request-title {
		            font-size: 15px;
		            line-height: normal;
								margin-left: 6em;
								margin-top: -3.3em;
								color: #4a4a4a;
								padding-right: 10px;
								#main-title{
									font-weight: 600;
									margin-bottom: 10px;
								}

								#description{
									margin-bottom: 15px;
								}

									.send{
										background-color: #41B6F9;
										padding: 5px 7px;
										color: #fff;
										border-radius: 4px;
										font-size: 14px;
										&:hover{
						          background-color: #419bf9 !important;
						          color: #fff;
						          transition: all .3s ease-in-out;
						        }
									}
									.post{
										background-color: #7ED321;
										padding: 5px 10px;
										color: #fff;
										border-radius: 4px;
										font-size: 14px;
										&:hover{
											background-color: #56D321 !important;
											color: #fff;
											transition: all .3s ease-in-out;
										}
									}
		          }

		      }
			}
		}
	}
}
/*
request new
*/
.request-title {
	margin-bottom: 40px;
	margin-top: 40px;

	.request-listing {
		color: #f5a623;
		font-weight: 600;
	}

	.shoutout-description{
		font-size: 16px;
		font-weight: 400;
		color: #4a4a4a;
	}
}

.request-container {
	background-color: #f2f2f2;
	width: 100%;
	padding-top: 1em;
	color: #4a4a4a;

	p{
		text-align: left;
		margin-top: 25px;
	}

	.form-content{
		display: table;
		margin: 0 auto;

	.new-request-form{
		font-weight: 500;
		font-size: 16px;
		color: #4a4a4a;

		.hashtag-input-box{
			.hashtag-box{
				width: 130px;
				height: 32px;
				border-radius: 3px;
				border: 1px solid #979797;
				font-size: 13px;
				padding-left: 10px;
				}
			}

			#tag-instruction{
				font-size: 12px;
				margin-top: 7px;
			}

			#add-hashtag-button{
				border: 1px solid #419BF9;
				border-radius: 3px;
				background-color: #f2f2f2;
				width: 80px;
				height: 32px;
				color: #419BF9;
				font-size: 13px;
				margin-top: 8px;
				cursor: pointer;

				&:hover{
					background-color: #419BF9;
					color: #fff;
				}
			}

			#request_timeframe {
				font-size: 14px;
			    border: 1px solid #979797;
			    height: 32px;
			    background-color: #fff;
			    color: #419bf9;
			   	border-radius: 3px;
			   	padding-left: 10px;
			}

			label{
				font-size: 16px;
				margin-top: -5px;
				margin-bottom: 5px;
			}

			.form-title{
				margin-top: 15px;
				margin-bottom: 8px;
				font-weight: 400;
			}

			#request_postal_code{
				width: 575px;
				height: 32px;
				border-radius: 3px;
				border: 1px solid #979797;
				font-size: 13px;
				padding-left: 10px;
			}

			#request_title{
				width: 575px;
				height: 32px;
				border-radius: 3px;
				border: 1px solid #979797;
				font-size: 13px;
				padding-left: 10px;
				margin-bottom: 5px;
				margin-top: -5px;
			}

			#request_description{
				width: 565px;
				height: 150px;
				border-radius: 3px;
				border: 1px solid #979797;
				font-size: 13px;
				padding: 10px 10px 10px 10px;
				margin-bottom: 25px;
				margin-top: -5px;
			}

	}
	.submit-shoutout{
		width: 120px;
		border: 1px solid #f5a623;
		background-color: #fff;
		border-radius: 5px;
		font-size: 16px;
		font-weight: 600;
		color: #4a4a4a;
		padding: 10px;
		margin-top: 1em;
		margin-bottom:10px;
		cursor: pointer;

		&:hover{
			background-color: #f5a623;
			color: #fff;
			transition: all .3s ease-in-out;
		}
	}

	#small-tip{
		font-size: 12px;
		padding-bottom: 5em;
	}

	}
}
