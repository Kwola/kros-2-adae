$purple: #A100C2;
$blue: #419bf9;
$green: #7ed321;
$orange: #f5a623;

#search, #items, #requests {
  margin-bottom: 0px;

  #search-feed-container, #item-feed-container, #request-feed-container {
    height: 90vh;
    overflow-y: scroll;
    position: relative;
    padding-right: 10px;
    padding-top: 10px;
    padding-left: 10px;
    width: 48%;
    background: #f2f2f2;

    #search-collection, #item-collection, #request-collection {
      -moz-column-count: 2;
      -webkit-column-count: 2;
      column-count: 2;
      -webkit-column-width: 100%;
      -moz-column-width: 100%;
      column-width: 100%;

      .item-index {
        margin-bottom: 10px;
        display: inline-block;
        width: 100%;
        border-radius: 4px;
        border-left: 1px solid #dcdcdc;
        border-top: 1px solid #dcdcdc;
        border-right: 1px solid #dcdcdc;

        .price-wrap {
          width: 100%;
          height: 120px;
          position: relative;

          .item-prices {
            color: #fff;
            font-size: 15px;
            font-weight: 400;
            position: absolute;
            bottom: 0;

            .sell {
              background: $green;
              padding:10px 5px 10px 5px;
              width: 90px;
              border-radius: 1px;
              &:hover{
                background-color: #5AC902;
                color: #fff;
                transition: all .3s ease-in-out;
              }
            }
            .lease {
              background: $blue;
              padding:10px 5px 10px 5px;
              width: 90px;
              border-radius: 1px;
              &:hover{
                background-color: #0077f3;
                color: #fff;
                transition: all .3s ease-in-out;
              }
            }
            .deposit {
              background: $green;
              padding:10px 5px 10px 5px;
              width: 90px;
              margin-top: 8px;
              border-radius: 1px;
              &:hover{
                background-color: #5AC902;
                color: #fff;
                transition: all .3s ease-in-out;
              }
            }
            .rent {
              background: $blue;
              padding:10px 5px 10px 5px;
              width: 90px;
              border-radius: 1px;
              &:hover{
                background-color: #0077f3;
                color: #fff;
                transition: all .3s ease-in-out;
              }
            }
            .timeoffer {
              background: $blue;
              padding:10px 5px 10px 5px;
              width: 90px;
              border-radius: 1px;
              &:hover{
                background-color: #0077f3;
                color: #fff;
                transition: all .3s ease-in-out;
              }
            }
          }
        }

        .item-wrap {
            background: #fff;
            width: 100%;
            height: 86px;
            margin-top: 10px;
            margin-left: -1px;
            border-radius: 0px 0px 2px 2px;
            border-left: 1px solid #dcdcdc;
            border-bottom: 1px solid #dcdcdc;
            border-right: 1px solid #dcdcdc;

          .avatar{
            border-radius: 50%;
            border: 1px solid #fff;
            height: 30px;
            width: 30px;
            float: left;
            margin-right: 10px;
            object-fit: cover;
          }


          #item-title {
            text-align: left;
            color: #4a4a4a;
            font-size: 15px;
            font-weight: 600;
            margin-left: 15px;
            line-height: normal;
            padding-top: 8px;
            height: 45px;
            &:hover{
              text-decoration: underline;
            }
          }

          .tag-container{
            float: right;
            margin: 8px 5px 5px 0px;
            .tags{
              color: $blue;
              font-size: 10px;
              text-align: right;
              margin-right: 1px;
              &:hover{
                color: #5DC2FF;
                transition: all .3s ease-in-out;
              }
            }
          }
        }
      }

      .request-index {
        border: 1px solid #f5a623;
        border-radius: 4px;
        background-color: #fff;
        margin-bottom: 10px;
        display: inline-block;
        width: 100%;

        .request-wrap {
          width: 100%;
          padding-bottom: 20px;

          .request-expiry {
            font-size: 11px;
            float: right;
            font-weight: 500;
            margin-right: 10px;
            margin-top: -10px;
            line-height: normal;
            display: inline;
            color: #979797;
          }

          .request-user {
            font-size: 15px;
            font-weight: 500;
            margin-left: 15px;
            margin-top: 15px;
            line-height: normal;
            width: 20px;

            .avatar{
              border-radius: 50%;
              border: 1px solid #fff;
              height: 50px;
              width: 50px;
              margin-right: 10px;
              object-fit: cover;
            }
          }

          #request-title {
            font-size: 15px;
            line-height: normal;
            margin-left: 6em;
            margin-top: -3.3em;
            color: #4a4a4a;
            padding-right: 10px;

            #main-title {
              font-weight: 600;
              margin-bottom: 10px;
              cursor:pointer;
              &:hover{
                text-decoration: underline;
              }
            }
            #description{
              margin-bottom: 15px;
            }
          }
          .tag-container{
            float: right;
            margin: 15px 5px 5px 0px;
            .tags{
              color: #419bf9;
              font-size: 10px;
              text-align: right;
              margin-right: 1px;
              &:hover{
                color: #5DC2FF;
                transition: all .3s ease-in-out;
              }
            }
          }
          .request-options {
            font-size: 15px;
            line-height: normal;
            margin-left: 6em;
            color: #4a4a4a;
            padding-right: 10px;

            .send{
               background-color: #41B6F9;
               padding: 5px 7px;
               color: #fff;
               border-radius: 4px;
               font-size: 14px;

              &:hover {
                  background-color: #419bf9 !important;
                  color: #fff;
                  transition: all .3s ease-in-out;
                }
            }
            .post {
              background-color: #7ED321;
              padding: 5px 10px;
              color: #fff;
              border-radius: 4px;
              font-size: 14px;

              &:hover{
                background-color: #56D321 !important;
                color: #fff;
                transition: all .3s ease-in-out;
              }
            }
          }
        }
      }
    }
  }
}

@media screen and (min-width: 320px) and (max-width: 768px){

  #search, #items, #requests {
    margin-bottom: 0px;

    #search-feed-container, #item-feed-container, #request-feed-container {
      height: 90vh;
      overflow-y: scroll;
      position: relative;
      width: 100% !important;
      background: #f2f2f2;

      #search-collection, #item-collection, #request-collection {
        -moz-column-count: 1;
        -webkit-column-count: 1;
        column-count: 1;
        -webkit-column-width: 100%;
        -moz-column-width: 100%;
        column-width: 100%;

    }
  }
}
}
