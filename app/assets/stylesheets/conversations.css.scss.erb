body{
  background-color: #f2f2f2;
}

.message-list{
  margin-top: 3em;
  .message{
    border: 1px solid #979797;
    border-radius: 3px;
    background-color: #fff;
    display: table;
    margin: 0 auto;
    width: 650px;
    height: 80px;
    margin-bottom: 10px;
  }
  .inbox-img {
    float: left;
    width: 130px;
    height: 130px;
    margin-right: 20px;

    img {
      width: 130px;
      height: 130px;
      object-fit: cover;
      object-position: center;
    }
  }

  .listings{
    list-style: none;

    .user-avatar-container {
      display: inline-block;
      float: left;
      margin-right: 15px;

      .user-avatar{
        height: 60px;
        width: 60px;
        border-radius: 50%;
      }
    }

    .item-detail{
      text-align: left !important;
      line-height: normal;
      color: #4a4a4a;
      font-size: 15px;
    }

    #item-title {
      margin-top: 20px;
      font-weight: 600;
    }

    #item_description {
      width: 400px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      margin-top: 5px;
    }

    .item-accept-deny-buttons{
      float:right;
      margin-right: 10px;
      margin-top: 25px;

      .reply-transaction{
        border: 1px solid #419bf9;
        border-radius: 5px;
        color: #419bf9;
        font-size: 16px;
        padding: 6px 45px 6px;
        &:hover{
          background-color: #419bf9;
          color: #fff;
          transition: all .3s ease-in-out;
        }
      }
    }
  }
}
