/*
Navbar/Landing
*/
.navlanding {
  position: relative;
  top: 30px;
  text-align: right;
  margin-right: 50px;

  .signup {
    background-color: rgba(0, 0, 0, 0.6);
    border: 1px solid #fff;
    border-radius: 5px;
    font-size: 13px;
    padding: 9px 14px 9px 14px;
    color: #fff;
    margin-left: 3px;

    &:hover{
      color: #fff;
      background-color: #000;
      transition: all .4s ease-in-out;
    }
  }

  .faq {
    background-color: #7ED321;
    border-radius: 5px;
    font-size: 13px;
    padding: 9px 30px 9px 30px;
    color: #fff;
  }

  .login {
    font-size: 13px;
    padding: 9px 12px 9px 12px;
    color: #fff;
  }
}


/*
Landing
*/
#landing{
  background-image: url(<%= asset_path 'landing_bg.jpg' %>);
  background-position: center;
  background-repeat: no-repeat;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  text-align: center;
  color: #fff;
  margin-bottom: 5em;

  #logo{
    height: 72px;
    width: auto;
    margin-top: 3em;
		margin-bottom: -1em;
		text-align: center;
  }

  #welcome{
    font-weight: bold;
    color: #fff;
    font-size: 45px;
  }
  .summary{
    font-weight: 400;
    font-size: 20px;
    margin-top: -1em;
    padding-bottom: 5px;
    line-height: normal;
  }

  .coming-soon{
    height:40px;
    width:auto;
    padding-bottom: 20px;
  }

  .explore{
    width: 200px;
    height: 40px;
    border: 1px solid #fff;
    border-radius: 4px;
    cursor: pointer;
    color: #fff;
    background: rgba(000, 000, 000, 0.5);
    font-size: 17px;
    font-weight: 300;
    margin-bottom: 20px;
    &:hover{
      color: #fff;
      background-color: #419bf9;
      transition: all .4s ease-in-out;
    }
  }

  #search-field {
    background-color: rgba(0,0,0,0.70);
    height: 100px;

    .search-bar {
      position: relative;
      top: 25px;
      right: 10%;
      display: block;
      margin-left: 20%;

      .search-field-placeholder{
        font-size: 20px;
        padding-left: 10px;
      }

      #search-form {
      	width: 80%;
      	height: 50px;
        background-color: #fff;
        border-radius: 3px 0px 0px 3px;
        border:none;
      }
    }

    .search-bar-label {
      vertical-align: top;
      background-color: #419BF9;
      color: #fff;
     	display: inline-block;
     	font-size: 18px;
    	font-weight: 400;
    	margin-left: -.25em;
      height: 52px;
      width: 100px;
      border-radius: 0px 3px 3px 0px;
      border: none;
      cursor: pointer;
    }
  }
}
