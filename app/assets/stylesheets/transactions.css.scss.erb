/*
Transaction New
*/
body{
  background-color: #f2f2f2;
}
.payment-info {
	display: table;
	margin: 0 auto;
	width: 500px;

  .price-details {
  	display: inline-block; 
  	width: 27%;
  	vertical-align: top;

  	.reply-field{
      display: table;
      margin: 0 auto;
      background-color: #fff;
      border-radius: 0px 0px 5px 5px;
      padding: 10px;
      width: 250px;
      margin-bottom: 3em;
      border: 1px solid #979797;

      .form-control {
        resize: none;
        -webkit-appearance: none;
        border: none;
       }

      .reply_btn{
        border-radius: 2px;
        cursor: pointer;
        background-color: #419BF9;
        border: none;
        color: #fff;
        padding: 4px;
        width: 70px;
        height: 31px;
        font-size: 14px;
        float: right;
        margin: 5px 10px;
        &:hover{
          background-color: #fff;
          color: #419BF9;
          border: 1px solid #419BF9;
        }
      }
    }



	.item-detail-price {
  	  border: 1px solid #979797;
  	  background-color: #fff;
  	  width: 270px;

  	  .division {
		border-top: 1px solid #DCDCDC;
		width: 100%;
		margin: 10px auto;
	  }
	  .finalp{
	  	  font-size: 16px;
	  	  margin-left: 20px;
	  }
	  #total{
	  	border:0;
	  	width: 45px;
	  	font-size: 16px;
	  	font-weight: 200;
	  	float: right;
	  	margin-right: 10px;
	  }
	  .how-long{
		margin-top: -10px;
		text-align: left;
		color: #4a4a4a;
		font-size: 13px;
		background-color: #E8E8E8;
		padding: 5px;
		font-weight: 500;
	  }
	  .item-title {
		font-weight: 600;
		color: black;
		text-align: center;
		opacity: 0.9;
		padding: 12px;
	  }
	  #qty{
	  	border: 1px solid #419bf9;
	  	margin-left: 4em;
	  	width: 30px;
	  	height:27px;
	  	vertical-align: top;
		border-radius: 4px;
		color: #4a4a4a;
		font-size: 15px;
		padding-left: 5px;
	  }
	  #transaction_length{
	  	border: 1px solid #419bf9;
	  	margin: auto;
	  	border-radius: 0;
	  	height:31px;
	    width: 100px;
	  	vertical-align: top;
	  	font-size: 15px;
	    border-radius: 4px;
		background-color: #fff;
		padding: 4px 10px;
		color: #4a4a4a;
	  }
	  .sale-price {
		color: #7ed321;
		font-weight: 500;
		font-size: 20px;
		padding-top: 55px;
	  }
	  .item-detail-calc {
	  	position:relative;
	  	.amount{
	  	  font-size: 16px;
	  	  margin-left: 20px;
	  	  border:0;
	  	  width: 55px;
	  	  font-size: 16px;
	  	  font-weight: 200;
	  	}
	  	#times{
	  	  border:0;
	  	  width: 20px;
	  	  font-size: 16px;
	  	  font-weight: 200;
	  	}
	  	#length{
	  	  border:0;
	  	  width: 60px;
	  	  font-size: 16px;
	  	  font-weight: 200;
	  	}
	  	#subtotal{
	  	  float: right;
	  	  margin-right: 10px;
	  	  border:0;
	  	  width: 45px;
	  	  font-size: 16px;
	  	  font-weight: 200;
	  	}
	  	.trust-fee{
	  	  font-size: 16px;
	  	  margin-left: 20px;
	  	  border:0;
	  	  width: 120px;
	  	  font-size: 16px;
	  	  font-weight: 200;
	  	}
	  	.deposit{
	  	  float: right;
	  	  margin-right: 10px;
	  	  border:0;
	  	  width: 45px;
	  	  font-size: 16px;
	  	  font-weight: 200;
	  	}
	  	.finalp{
	  	  font-size: 16px;
	  	  margin-left: 20px;
	  	}
	  	#transaction_total_price{
	  	  border:0;
	  	  width: 65px;
	  	  font-size: 16px;
	  	  font-weight: 200;
	  	  float: right;
	  	  margin-right: 10px;
	  	}
	  }
	  .buy-button {
	  	display: table;
	  	margin: auto;
		background-color:#7ed321;
		color: #fff;
		font-size: 16px;
		font-weight: 600;
		border-radius: 2px;
		cursor: pointer;
		padding: 10px 50px 10px 50px;
		&:hover{
			background-color: #5AC902;
			color: #fff;
		}
	  }
	  .rent-button {
	  	display: table;
	  	position: relative;
	    margin: auto;
	  	text-align: center;
		background-color:#419bf9;
		margin-top: 1em;
		color: #fff;
		font-size: 16px;
		font-weight: 600;
		border-radius: 2px;
		cursor: pointer;
		padding: 10px 50px 10px 50px;
		&:hover{
			background-color: #0077f3;
			color: #fff;
		}
	  }
	}
	.item-lease-price {
      position: relative;
	  z-index:2;
	  border: 1px solid #979797;
	  background-color: #fff;
  	  height: 270px;
  	  width: 270px;
	  bottom: 15px;

	  .price-title {
	    font-weight: 600;
	    color: white;
	    background-color:#7ed321;
	    text-align: center;
	    opacity: 0.6;
	    padding: 10px;
	  }
	  .sale-price {
	    color: #7ed321;
	    font-weight: 500;
	    font-size: 24px;
	  }
	  .buy-button {
	  	display: table;
	  	position: relative;
	  	text-align: center;
	  	margin: auto;
		background-color:#7ed321;
		color: #fff;
		font-size: 16px;
		font-weight: 600;
		border-radius: 2px;
		cursor: pointer;
		padding: 10px 50px 10px 50px;
		&:hover{
			background-color: #5AC902;
			color: #fff;
		}
	  }
    }
  }
}

  /*responsive width styling for the page content not to be too spread out*/
	@media only screen and (min-width: 1280px) {
		.price-details{
		  padding-right: 5%;
		}
	}
	@media only screen and (min-width: 1440px) {
		.price-details{
		  padding-right: 10%;
		}
	}

	@media only screen and (min-width: 1680px) {
		.price-details{
		  padding-right: 15%;
		}
	}
	@media only screen and (min-width: 1920px) {
		.price-details{
		  padding-right: 20%;
		}
	}
  /*end section*/