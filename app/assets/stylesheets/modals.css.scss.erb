/* Modals */

.avatar-image {
  border-radius: 50px;
}

/* Login Modal */

#shareSigninModal {
  position: fixed;
  margin: 0 auto;
  opacity: 1;
  z-index: 2;
  top: 22%;
  right: 40%;
  width: 16.3em;
  height: 18em;
  margin-right: 30px;
  background-color: #F9F9F9;
  border-radius: 5px;
  border: 1px solid #419bf9;

    .signin-form{
      display: table;
      margin: 0 auto;
      padding-top: 5px;

      #user_email, #password{
        height: 40px;
        width: 225px;
        margin: auto;
        font-size: 15px;
        font-weight: normal;
        background-color: #fff;
        border-radius: 3px;
        color: #4a4a4a;
        padding-left: 0.75em;
        padding-right: .5em;
        border: 1px solid #929292;
        margin-bottom: .6em;
      }

      .login-button{
        padding: 13px 101px !important;
        background-color: #419bf9;
        color: #fff;
        border-radius: 3px;
        border: 0;
        cursor: pointer;
        font-size: 14px;
        font-weight: 500;
        text-align: center;
        margin-top: 10px;
        &:hover {
          background-color: #0077F3;
          transition: all .3s ease-in-out;
        }
      }
      .rmbr-me{
        font-size: 13px !important;
        display: inline;
      }
      #divider{
        border-top: 1px solid #DADADA;
        margin-top: 18px;
        margin-bottom: 10px;
      }

      #log-in-text{
        text-align: left;
        font-size: 12px;
        color: #4a4a4a;
        margin: 5px 0 5px 0;
        a { color: #419bf9 !important;
        text-decoration: underline; }
      }

      .shared{
        line-height: normal;
      }
    }

    #user_email::-webkit-input-placeholder {
     background-image:url(<%= asset_path 'email.png' %>);
     background-repeat: no-repeat;
     background-size: 18px 18px;
     background-position: right;
   }

   #user_email::-moz-placeholder {
    background-image:url(<%= asset_path 'email.png' %>);
    background-repeat: no-repeat;
    background-size: 18px 18px;
    background-position: 220px 12px;
  }

   #password::-webkit-input-placeholder {
    background-image:url(<%= asset_path 'lock_2.png' %>);
    background-repeat: no-repeat;
    background-size: 16px 18px;
    background-position: right;
  }

  #password::-moz-placeholder {
   background-image:url(<%= asset_path 'lock_2.png' %>);
   background-repeat: no-repeat;
   background-size: 16px 18px;
   background-position: 220px 12px;
 }
}

.modal-backdrop {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: #000;
}
.modal-backdrop.in {
  opacity: .8;
  filter: alpha(opacity=80);
}
.shared {
  text-align: left;
  font-size: 12px;
  margin: 0px;
  color: #4a4a4a;
  a { color: #419bf9 !important;
  text-decoration: underline; }
}

/* Sign Up Modal */

