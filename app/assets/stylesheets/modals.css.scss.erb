/* Share New Question Modal */

.avatar-image {
  border-radius: 50px;
}

.signup-cancel {
  position: absolute;
  right: 10px;
  top: 5px;
  cursor: pointer;
}

.image-upload-cancel {
  color: #979797;
  position:absolute;
  bottom: 10px;
  right: 10px;
  font-size: 12px;
  border-radius: 2px;
  background-color: #fff;
  border: 1px solid #979797;
}



.upload_image{
  cursor: pointer;
  &:hover {
    opacity: 0.9;
  }
}

.file {
  position: relative;
}

.file input {
  position: absolute;
  display: inline-block;
  left: 0;
  top: 0;
  opacity: 0.01;
  width: 160px;
  cursor: pointer;
  margin-left: 5.5em;
}

.file label {
  background: #FF7A40;
  padding: 5px 20px;
  color: #fff;
  font-weight: bold;
  font-size: .9em;
  transition: all .4s;
  height: 30px;
  border-radius: 3px;
   margin-left: 5.5em;
}

  #signup-modal-splitter {
    margin-bottom: 10px;
  }


#shareSigninModal {
  position: fixed;
  z-index: 2;
    top: 80px;
    right: 0;
    color: #419bf9;
    margin-right: 30px;
}

#shareSignupModal {
position: fixed;
    top: 80px;
    right: 0;
    color: white;
    margin-right: 30px;
    z-index: 2;
  background: #419bf9 repeat-x center top;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 100%;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  width: 22em;
  height: 22em;
  margin: auto;
  overflow: auto;
  border-radius: 10px;

  #username-output{
    font-weight: 400;
  }

  .share-modal-content-container {
    text-align: center;
    padding-top: 2em;
    padding-left: 2em;
    padding-right: 2em;
    font-weight: bold;

    .signup-form {
      text-align: left;

        .signup-input {

          .input-username,
          .input-password {
            display: inline-block;
            margin: 1em 0 0 0 ;

            .input-box {
              height: 30px;
              width: 290px;
              margin: auto;
              font-size: 12px;
              font-weight: normal;
              font-style: italic;
              background-color: #fff;
              border: 0;
              border-radius: 3px;
              color: grey;
              padding-left: 0.75em;
            }
          }

          #password::-webkit-input-placeholder {
            background-image: url(image_path('lock.png'));
            background-repeat: no-repeat;
            background-size: 12px 15px;
            background-position: 25% 25%;
          }

          #password::-moz-placeholder {
            background-image: url(image_path('lock.png'));
            background-repeat: no-repeat;
            background-size: 12px 15px;
            background-position: 25% 25%;
          }
        }

        .signup-links-bottom {
          text-align: center;

          .signup-button {
            padding: 10px 15px 10px 15px;
            background-color: #2AE441;
            color: #fff;
            border-radius: 4px;
            border: 0;
            margin: 1em auto;
            cursor: pointer;

            &:hover {
              background-color: #21D838;
            }
          }

          .terms-notice {
            font-weight: normal;
            font-size: 10px;
            a { color: inherit;
            text-decoration: underline; }
          }
        }
    }
  }
}

.modal-finished-container {
  float:left;
  margin-right:2em;
  margin-left: 2.6em;
}
