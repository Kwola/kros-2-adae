/* Share New Question Modal */

.avatar-image {
  border-radius: 50px;
}

.signup-cancel {
  position: absolute;
  right: 8px;
  top: 10px;
  font-size: 10px;
  cursor: pointer;
  color: #979797;
  font-weight: bold;
}

.image-upload-cancel {
  color: #979797;
  position:absolute;
  bottom: 10px;
  right: 10px;
  font-size: 12px;
  border-radius: 2px;
  background-color: #fff;
  border: 1px solid #979797;
}



.upload_image{
  cursor: pointer;
  &:hover {
    opacity: 0.9;
  }
}

.file {
  position: relative;
}

.file input {
  position: absolute;
  display: inline-block;
  left: 0;
  top: 0;
  opacity: 0.01;
  width: 160px;
  cursor: pointer;
  margin-left: 5.5em;
}

.file label {
  background: #FF7A40;
  padding: 5px 20px;
  color: #fff;
  font-weight: bold;
  font-size: .9em;
  transition: all .4s;
  height: 30px;
  border-radius: 3px;
   margin-left: 5.5em;
}

  #signup-modal-splitter {
    margin-bottom: 10px;
  }


#shareSigninModal {
  position: fixed;
  z-index: 2;
    top: 80px;
    right: 0;
    color: #419bf9;
    margin-right: 30px;
}

.modal-backdrop {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 0;
    background-color: #000;
}
.modal-backdrop.fade {
    opacity: 0;
    filter: alpha(opacity=0);
}
.modal-backdrop.in {
    opacity: .5;
    filter: alpha(opacity=50);
}

#shareSignupModal {
  position: fixed;
  top: 25%;
  z-index: 2;
  opacity: 1;
  background-color: #F9F9F9;
  width: 16.3em;
  height: 30.3em;
  border-radius: 5px;
  border: 1px solid #419bf9;
  .modal-backdrop {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1;
    background-color: #000;
}
.modal-backdrop.fade {
    opacity: 0;
    filter: alpha(opacity=0);
}
.modal-backdrop.fade.in {
    opacity: .5;
    filter: alpha(opacity=50);
}

  #username-output{
    font-weight: 400;
  }

  .share-modal-content-container {
    text-align: center;
    padding-top: .5em;
    padding-left: .5em;
    padding-right: .5em;
    font-weight: bold;

    .signup-form {
      text-align: left;
      margin-top: 1em;
        .signup-input {

          .input-username,
          .input-password {
            display: inline-block;
            margin: 1em 0 0 0 ;

            .input-box {
              height: 40px;
              width: 230px;
              margin: auto;
              font-size: 15px;
              font-weight: normal;
              background-color: #fff;
              border: 0;
              border-radius: 3px;
              color: #4a4a4a;
              padding-left: 0.75em;
              border: 1px solid #929292;
            }
          }
        }

        .signup-links-bottom {
          text-align: center;

          .signup-button {
            padding: 13px 96px;
            background-color: #419bf9;
            color: #fff;
            border-radius: 3px;
            border: 0;

            cursor: pointer;
            font-size: 14px;
            font-weight: 500;

            &:hover {
              background-color: #0077F3;
            }
          }

          .terms{
            text-align: left;
            line-height: normal;
            font-weight: normal;
            font-size: 12px;
            margin-top: 15px;
            color: #4a4a4a;
            a { color: #419bf9 !important;
            text-decoration: underline; }
          }
        }

        #divider{
          border-top: 1px solid #DADADA;
          margin-top: 18px;
        }

        #log-in-text{
          text-align: left;
          line-height: normal;
          font-weight: normal;
          font-size: 12px;
          a { color: #419bf9 !important;
          text-decoration: underline; }
        }
    }
  }
}

