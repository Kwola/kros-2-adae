/* Share New Question Modal */

.avatar-image {
  border-radius: 50px;
}

.signup-cancel {
  position: absolute;
  right: 8px;
  top: 10px;
  font-size: 10px;
  cursor: pointer;
  color: #979797;
  font-weight: bold;
}

.image-upload-cancel {
  color: #979797;
  position:absolute;
  bottom: 10px;
  right: 10px;
  font-size: 12px;
  border-radius: 2px;
  background-color: #fff;
  border: 1px solid #979797;
}



.upload_image{
  cursor: pointer;
  &:hover {
    opacity: 0.9;
  }
}

.file {
  position: relative;
}

.file input {
  position: absolute;
  display: inline-block;
  left: 0;
  top: 0;
  opacity: 0.01;
  width: 160px;
  cursor: pointer;
  margin-left: 5.5em;
}

.file label {
  background: #FF7A40;
  padding: 5px 20px;
  color: #fff;
  font-weight: bold;
  font-size: .9em;
  transition: all .4s;
  height: 30px;
  border-radius: 3px;
   margin-left: 5.5em;
}

  #signup-modal-splitter {
    margin-bottom: 10px;
  }

  .signin-cancel{
    position: absolute;
    right: 8px;
    top: 10px;
    font-size: 10px;
    cursor: pointer;
    color: #979797;
