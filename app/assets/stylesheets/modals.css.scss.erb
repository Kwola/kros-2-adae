              padding-right: .5em;
              border: 1px solid #929292;
            }

            #promo{
              border: 1px solid #7ED321;
              color: #5AC902;
            }
          }

          #password::-webkit-input-placeholder{
            background-image:url(<%= asset_path 'lock_2.png' %>);
            background-repeat: no-repeat;
            background-size: 16px 18px;
            background-position: right;
          }

         #password::-moz-placeholder{
            background-image:url(<%= asset_path 'lock_2.png' %>);
            background-repeat: no-repeat;
            background-size: 16px 18px;
            background-position: 220px 12px;
          }

         #user_password_confirmation::-webkit-input-placeholder {
            background-image:url(<%= asset_path 'lock_2.png' %>);
            background-repeat: no-repeat;
            background-size: 16px 18px;
            background-position: right;
          }

          #user_password_confirmation::-moz-placeholder {
            background-image:url(<%= asset_path 'lock_2.png' %>);
            background-repeat: no-repeat;
            background-size: 16px 18px;
            background-position: 220px 12px;
          }

          #username-input::-webkit-input-placeholder {
            background-image:url(<%= asset_path 'user_circle.png' %>);
            background-repeat: no-repeat;
            background-size: 18px 18px;
            background-position: right;
          }

          #username-input::-moz-placeholder {
            background-image:url(<%= asset_path 'user_circle.png' %>);
            background-repeat: no-repeat;
            background-size: 18px 18px;
            background-position: 220px 12px;
          }

          #user_surname::-webkit-input-placeholder {
            background-image:url(<%= asset_path 'user_circle.png' %>);
            background-repeat: no-repeat;
            background-size: 18px 18px;
            background-position: right;
          }

          #user_surname::-moz-placeholder {
            background-image:url(<%= asset_path 'user_circle.png' %>);
            background-repeat: no-repeat;
            background-size: 18px 18px;
            background-position: 220px 12px;
          }

          #user_email::-webkit-input-placeholder{
            background-image:url(<%= asset_path 'email.png' %>);
            background-repeat: no-repeat;
            background-size: 18px 18px;
            background-position: right;
          }

          #user_email::-moz-placeholder{
            background-image:url(<%= asset_path 'email.png' %>);
            background-repeat: no-repeat;
            background-size: 18px 18px;
            background-position: 220px 12px;
          }
        }

        .signup-links-bottom {
          text-align: center;

          .signup-button {
            padding: 13px 96px;
            background-color: #419bf9;
            color: #fff;
            border-radius: 3px;
            border: 0;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;

            &:hover {
              background-color: #0077F3;
              transition: all .3s ease-in-out;
            }
          }

          .terms{
            text-align: left;
            line-height: normal;
            font-weight: normal;
            font-size: 12px;
            margin-top: 15px;
            color: #4a4a4a;
            a { color: #419bf9 !important;
            text-decoration: underline; }
          }
        }

        #divider{
          border-top: 1px solid #DADADA;
          margin-top: 18px;
        }

        #sign-up-text{
          text-align: left;
          font-weight: normal;
          margin: 8px 0 8px 0;
          font-size: 12px;
          color: #4a4a4a;
          a { color: #419bf9 !important;
          text-decoration: underline; }
        }
    }
  }
}

/* Companion Modal */
#shareCompanionModal {
  position: fixed;
  background-color: #7ABCFF;
  height: 600px;
  width: 900px;
  z-index: 2;
  top: 16%;
  right: 15%;
  left:15%;
  bottom: 15%;
  display: table;
  margin: auto;
  border-radius: 10px;
  border: 3px solid #fff;

  .explore-container{
    margin-top: 50px;
    #title{
      font-weight: 500;
      margin: 0 auto;
      display: table;
      width: 530px;
      font-size: 20px;
      line-height: normal;
      margin-left: 17em;
      color: #fff;
      font-family: 'Avenir Next','Arial Rounded MT Bold';

