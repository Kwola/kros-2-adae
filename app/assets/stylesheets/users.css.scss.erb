
.bootstrap {
  @import "bootstrap-sprockets";
  @import "bootstrap";
}

body{
  background-color: #f2f2f2;
}

/*User Profile Info*/
.user-content-container{
  display: table;
  margin: 0 auto;
  margin-top: 3em;
  width: 770px;

.profile-info{
  background-color: #fff;
  width: 220px;
  padding: 15px;
  border-radius: 6px;
  border: 1px solid #979797;
  float: left;

  h1{
    color: #4a4a4a;
    font-size: 20px;
    font-weight: 500;
  }

  p{
    color: #4a4a4a;
    font-size: 14px;
  }

  .p-account-edit{
    &:hover{
      color:#419bf9;
    }
  }
  .p-account-delete{
    &:hover{
      color:#FF6678;
    }
  }

  .api-button{
    color: #9b9b9b;
    &:hover{
      color:#419bf9;
    }
  }
}
/*Account Balance Section*/
.account-balance-section{
  background-color: #fff;
  width: 240px;
  padding: 5px;
  height: 95px;
  border-radius: 6px;
  border: 1px solid #979797;
  display: inline-block;
  margin-top: 20px;
  p{
    font-size: 16px;
    margin-top: 10px;
    color: #40C11B;
  }
  #balance{
    font-size: 38px;
    font-weight: 600;
  }
}

/*Mail Cheque Section*/
  h4{
    font-size: 19px;
    font-weight: 600;
    color: #4a4a4a;
    margin-bottom: 10px;
  }
.mail-cheque-section{
  background-color: #fff;
  width: 240px;
  padding: 5px;
  border-radius: 6px;
  border: 1px solid #979797;
  display: inline-block;
  margin-top: -15px;

  #title{
    font-weight: 600;
    color: #4a4a4a;
    margin-bottom: -10px;
  }

  #description{
    font-weight: 400;
    color: #4a4a4a;
    text-align: left;
    line-height: 20px;
    margin-left: 10px;
  }
}

/*Direct Deposit Section*/
.payment-settings{
  background-color: #fff;
  width: 240px;
  height: 150px;
  border: 1px solid #979797;
  border-radius: 5px;
  padding: 5px;
  margin-bottom: 25px;


  p{
    font-size: 17px;
    font-weight: 600;
    color: #4a4a4a;
    margin-bottom: -10px;
  }

  #description{
    font-size: 16px;
    font-weight: 400;
    line-height: 20px;
    text-align: left;
    margin-left: 10px;
    margin-bottom: 15px;
  }

  .cashout-btn{
    background-color: #419bf9;
    color: #fff;
    padding: 10px 40px;
    font-size: 16px;
    font-weight: 500;
    border-radius: 5px;
    display: table;
    margin: 0 auto;
    cursor: pointer;
    &:hover{
      background-color: #0077F3;
    }
  }
}
/*Requests Container*/
.request-container{
  display: table;
  margin: 0 auto;
  padding-bottom: 3em;
  float: right;

  .request-heading{
    font-size: 18px;
    font-weight: 600;
    color: #4a4a4a;
  }

  .request-img{
    width: 120px;
    height: 120px;
    overflow: hidden;
    float: left;
    margin-top: 10px;
    border: 1px solid #eaeaea;

    img{
      height: 100%;
    }
  }
  .requests{
    border: 1px solid #979797;
    list-style: none;
    background-color: #fff;
    margin-top: 10px;
    margin-left: 132px;
    height: 200px;
    width: 350px;

    .item-title{
      text-align: left !important;
      line-height: normal;
      color: #4a4a4a;
      padding: none;
      margin-left: 10px;
      margin-top: 20px;
    }

    .accept-decline-button{
      float:right;
      top: 9em;
      position: relative;
      margin-right: 10px;


      .delete-item{
        border: 1px solid #FF6678;
        border-radius: 5px;
        color: #FF6678;
        font-size: 14px;
        padding: 3px 7px 3px;
        margin-left: 5px;
        &:hover{
          background-color: #FF6678;
          color: #fff;
          }
        }
      }
    }
  }
