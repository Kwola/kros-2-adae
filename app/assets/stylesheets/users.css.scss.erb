/*My Listing Section*/
.listing-container{
  display: table;
  margin: 0 auto;
  padding-bottom: 5em;
  float: right;

  .listing-heading{
    font-size: 18px;
    font-weight: 600;
    color: #4a4a4a;
  }

  .listing-img{
    width: 120px;
    height: 120px;
    overflow: hidden;
    float: left;
    margin-top: 10px;

    img{
      height: 100%;
    }
  }
  .listings{
    border: 1px solid #979797;
    list-style: none;
    background-color: #fff;
    margin-top: 10px;
    margin-left: 132px;
    height: 120px;
    width: 350px;

    .item-title{
      text-align: left !important;
      line-height: normal;
      color: #4a4a4a;
      padding: none;
      margin-left: 10px;
      margin-top: 20px;
    }

    .item-edit-delete-buttons{
      float:right;
      margin-right: 10px;
      margin-top: 25px;

      .edit-item{
        border: 1px solid #419bf9;
        border-radius: 5px;
        color: #419bf9;
