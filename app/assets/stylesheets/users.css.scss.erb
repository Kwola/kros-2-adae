.bootstrap {
  @import "bootstrap-sprockets";
  @import "bootstrap";
}

body{
  background-color: #f2f2f2;
}
/*User Reviews Section*/
.user-reviews{
  background-color: #fff;
  width: 100%;
  color: #4a4a4a;
  padding-bottom: 3em;

  .account-heading{
    font-weight: 500;
    color: #4a4a4a;
    text-align: center;
  }

  .user-review{
    width: 38%;
    display: table;
    margin: 0 auto;
    text-align: left;




    .review-title{
      font-weight: 500;
      color: #419bf9;
      margin-bottom: -10px;
    }

    p{
      text-align: left;
      color: #4a4a4a;
      line-height: normal;
    }

    .poster{
      font-size: 16px;
      color: #9B9B9B;
      margin-bottom: 5px;
    }

    .edit-delete-buttons{
      float:right;
      margin-bottom: 5px;
      display: inline-block;

    .edit-review{
      border: 1px solid #419bf9;
      border-radius: 5px;
      color: #419bf9;
      font-size: 14px;
      padding: 6px 15px 5px;
      &:hover{
        background-color: #419bf9;
        color: #fff;
      }
    }

    .delete-review{
      border: 1px solid #FF6678;
      border-radius: 5px;
      color: #FF6678;
      font-size: 14px;
      padding: 6px 7px 5px;
      margin-left: -23px;
      &:hover{
        background-color: #FF6678;
        color: #fff;
      }
      }
    }

    .divider{
      border-top: 1px solid #DCDCDC;
      width: 100%;
      margin-top: 55px;
    }
  }
}
/*User Review Section Ends here */
