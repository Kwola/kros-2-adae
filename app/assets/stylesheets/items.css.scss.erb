/*
item Show
*/

.item-info {
	width: 95%;
	margin: auto;

	img {
		display: inline-block;
	}

	.item-details {
		display: inline-block;
		width: 35%;
		vertical-align: top;
		margin-left: 3em ;
	}

}

.rating-info {
	display: inline-block;
	vertical-align: top;
	margin: auto;
	width: 40%;

	.overall-rating {
		display: block;
		vertical-align: top;
		font-size: 25px;
		font-family: 'Avenir Next', 'Avenir', sans-serif;
		font-weight: 400;
		text-transform: uppercase;
		text-align: right;


		margin-left: 5em;
		margin-top: 0.25em;
		margin-bottom: 0.5em;
	}

	.rating-by-user {
		display: block;
		float: right;
		vertical-align: top;
		font-size: 20px;
		font-family: 'Avenir Next', 'Avenir', sans-serif;
		font-weight: 400;
		text-transform: uppercase;
		width: auto;
		margin-bottom: 1em;
	}
}

.item-reviews {
	display: inline-block;
	font-size: 26px;
	font-family: 'Avenir Next', 'Avenir', sans-serif;
	font-weight: 400;
	text-transform: uppercase;

	margin-left: 16em;
	margin-bottom: 0.75em;
}

#review-list {
	display: block;
	width: 50%;
	margin: 0 auto;

	.review {
		display: block;
		padding: 1em;
		background-color: #419bf9;
		opacity: 0.75;
		margin-bottom: 0.5em;
		text-align: center;
	}
}

.create-review {
	display: inline-block;
	font-size: 26px;
	font-family: 'Avenir Next', 'Avenir', sans-serif;
	font-weight: 400;
	text-transform: uppercase;
	margin-left: 18em;
	margin-bottom: 0.75em;

}

.create_review-fields {
	display: block;
	width: 50%;
	margin: 0 auto;

	#review_comment {
		display: inline-block;
		width: 100%;
		height: 5em;
	}

	.review-submit {
		margin-top: 1em;
		margin-bottom: 5em;
	}
}


/*
item new
*/
.list-title {
	margin-bottom: 40px;

	.item-listing {
		color: #419bf9;
		font-weight: 600;
	}
	.listing-description {
		font-size: 12px;
		font-weight: 500;
		color: #646464;
	}
}

.listing-selection {
	background-color: #f2f2f2;
	width: 100%;
	text-align: center;
	margin: auto;
	height: 500px;


}

.item-container {
	background-color: #eaeaea;
	width: 95%;
	text-align: center;
	margin: auto;

}
