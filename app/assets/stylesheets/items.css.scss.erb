#items {
  margin-left: 15px;

  #map-canvas{
    position: absolute;
    z-index: 0 !important;
    height: 593px;
    width: 50%;
    top: 60px;
    right: 0;
  }
  #item-collection {
	width: 48%;
	margin-top: 10px;
	-moz-column-count: 2;
	-webkit-column-count: 2;
	column-count: 2;

	.item-index {
	  border: 1px solid #419bf9;
	  margin-bottom: 10px;
	  display: inline-block;
	  height: 190px;
	}
  }
}

