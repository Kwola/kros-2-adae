/*
itemS INDEX/SEARCH
*/
#items {
	display: block;
	width: 80%;
	margin-left: 18%;
	margin-right: 18%;
}

.item-index {
	display: inline-block;
	width: 70%;
	padding: 1em;
	background-color: #419bf9;
	opacity: 0.75;
	margin-bottom: 0.5em;
	text-align: center;
}

/*
item Show
*/

.item-info {
	width: 95%;
	margin: auto;

	img {
		display: inline-block;
	}

	.item-details {
		display: inline-block;
		width: 35%;
		vertical-align: top;
		margin-left: 3em ;
	}

}

.rating-info {
	display: inline-block;
	vertical-align: top;
	margin: auto;
	width: 40%;

	.overall-rating {
		display: block;
		vertical-align: top;
		font-size: 25px;
		font-family: 'Avenir Next', 'Avenir', sans-serif;
		font-weight: 400;
		text-transform: uppercase;
		text-align: right;


		margin-left: 5em;
		margin-top: 0.25em;
		margin-bottom: 0.5em;
	}

	.rating-by-user {
		display: block;
		float: right;
		vertical-align: top;
		font-size: 20px;
		font-family: 'Avenir Next', 'Avenir', sans-serif;
		font-weight: 400;
		text-transform: uppercase;
		width: auto;
		margin-bottom: 1em;
	}
}

.item-reviews {
	display: inline-block;
	font-size: 26px;
	font-family: 'Avenir Next', 'Avenir', sans-serif;
	font-weight: 400;
	text-transform: uppercase;

	margin-left: 16em;
	margin-bottom: 0.75em;
}

#review-list {
	display: block;
	width: 50%;
	margin: 0 auto;

	.review {
		display: block;
		padding: 1em;
		background-color: #419bf9;
		opacity: 0.75;
		margin-bottom: 0.5em;
		text-align: center;
	}
}

.create-review {
	display: inline-block;
	font-size: 26px;
	font-family: 'Avenir Next', 'Avenir', sans-serif;
	font-weight: 400;
	text-transform: uppercase;
	margin-left: 18em;
	margin-bottom: 0.75em;

}

.create_review-fields {
	display: block;
	width: 50%;
	margin: 0 auto;

	#review_comment {
		display: inline-block;
		width: 100%;
		height: 5em;
	}

	.review-submit {
		margin-top: 1em;
		margin-bottom: 5em;
	}
}


/*
item new
*/
.item-container {
	background-color: #eaeaea;
	width: 100%;
	text-align: center;
	margin: auto;
}
.list-title {
	margin-bottom: 50px;
	margin-top: 50px;
	.item-listing {
		color: #419bf9;
		font-weight: 600;

	}
	.listing-description {
		font-size: 16px;
		font-weight: 500;
		color: #646464;
	}
}

.listing-selection {
	background-color: #f2f2f2;
	width: 100%;
	height: 500px;

}

/* Listing choices */
.listing-choices{
	padding-top: 5em;
	margin-left: 31%;

	.lease{
		width: 100%;
		margin-bottom: 4em;
		white-space: nowrap;
		a{
			padding: 10px 72px;
		}
	}

	.rent{
		width: 100%;
		margin-bottom: 4em;
		white-space: nowrap;
		a{
			padding: 10px 78px;
		}
	}

	.sell{
		width: 100%;
		margin-bottom: 4em;
		white-space: nowrap;
		a{
			padding: 10px 80px;
		}
	}

	.timeoffer{
		width: 100%;
		margin-bottom: 4em;
		white-space: nowrap;
		a{
			padding: 10px 40px;
		}
	}

	.descriptor{
		padding-left: .5em;
	}

	#lease-descriptor{
		position: relative;
		bottom: 10px;
		padding-left: .5em;
	}

	#lease-descriptor-2{
		position: relative;
		top: 10px;
		left: -358px;
	}


	.lease,.rent,.sell,.timeoffer{
		.listing-button{
			background-color: #fff;
			font-size: 18px;
			border: 1px solid #419BF9;
			border-radius: 3px;

			&:hover{
				background-color: #419BF9;
				color: #fff;
			}
		}

	}
}
