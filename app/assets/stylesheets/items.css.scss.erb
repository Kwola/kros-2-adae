.rating-container {
  display: table;
  margin: 0 auto;
  background-color: #fff;
  width: 100%;
  padding-top: 2em;

  .overall-rating {
  	font-size: 18px;
  	font-family: 'Avenir Next', 'Avenir', sans-serif;
  	font-weight: 400;
  	display: table;
  	margin: 0 auto;
  	color: #419bf9;
  	margin-bottom: 10px;

  	.rating-score {
	  border: 1px solid #DCDCDC;
	  width: 105px;
	  height: 105px;
	  border-radius: 5px;
	  float: left;
	  padding: 5px;
	  margin-bottom: 10px;
	  margin-right: 10px;

  	  p{
  	  	font-size:15px;
  	  	margin-top: 14px;
  	  }

  	  .score{
  	  	color: #EADB1E;
  	  	font-size: 32px;
  	  	margin-bottom: 5px;
  	  	margin-top: 2px;
  	  	font-weight: 600;
	  }
  	}
  }

  .rating-by-user {
  	font-size: 15px;
  	font-family: 'Avenir Next', 'Avenir', sans-serif;
  	font-weight: 400;
  	display: table;
  	margin: 0 auto;

  	.rating-info{
      border: 1px solid #DCDCDC;
      width: 105px;
  	  height: 105px;
      border-radius: 5px;
      float: right;
      padding: 5px;

      a{
        color: #419bf9;
		margin-left: 38px;
        &:hover{
          text-decoration: underline;
        }
      }
	  .rating {
	    color: #EADB1E;
	    font-size: 32px;
	    margin-bottom: 8px;
	    margin-top: -3px;
	    font-weight: 600;
	  }
    }
    .add-a-rating {
	  font-size: 16px;
	  background-color: #419bf9;
	  padding: 9px 18px;
	  border-radius: 3px;
	  color: #fff;
	  margin: 0 auto;
	  display: table;
	  &:hover{
		text-decoration: none;
		color: #fff;
		background-color: #EADB1E;
	  }
	}
  }
}

.divider{
	border-top: 1px solid #DCDCDC;
	width: 100%;
	margin: 0 auto;
	margin-top: 30px;
}

.review-list {
  width: 100%;
  background-color: #fff;
  margin: 0 auto;
  padding-bottom: 2em;

  .create_review-fields {
    display: table;
    margin: 0 auto;
    padding-top: 2em;

    label{
    	font-size: 20px;
    	font-weight: 500;
    	color: #419bf9;
    	margin-bottom: 10px;
    }

    #review_comment {
	  display: table;
	  margin: 0 auto;
	  width: 550px;
	  height: 90px;
	  font-size: 15px;
	  padding: 10px;
	  border-radius: 4px;
	  border: 1px solid #979797;
    }

    .review-submit {
	  margin-top: 5px;
  	  .review-button {
  		font-size: 13px;
  		padding: 8px;
  		border: none;
  		background-color: #419bf9;
  		color: #fff;
  		border-radius: 4px;
  		cursor: pointer;
  		&:hover {
  		  background-color: #0E84FF;
  		}
  	  }
    }
  }

  .review-content {
	display: table;
	margin: 0 auto;
	margin-top: 1em;
	text-align: left;
	width: 38%;
	color: #4a4a4a;

	.item-reviews{
  	  font-size: 18px;
  	  font-weight: 500;
  	  display: table;
  	  color: #4a4a4a;
  	  margin-top: 1em;
  	  margin-bottom: 20px;
  	  text-transform: none;
  	  text-align: left;
  	  line-height: normal;
  	}
  }
}



