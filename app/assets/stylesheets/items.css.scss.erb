/*
itemS INDEX/SEARCH
*/
.bootstrap{@import "bootstrap-sprockets";
@import "bootstrap";
}
#items {
	margin-left: 15px;

	#map-canvas{
		position: absolute;
		height: 593px;
		width: 50%;
		top: 60px;
		right: 0;
	}
	#item-collection {
		width: 48%;
		margin-top: 10px;
		-moz-column-count: 2;
		-webkit-column-count: 2;
		column-count: 2;

		.item-index {
			border: 1px solid #419bf9;
			margin-bottom: 10px;
			display: inline-block;
			height: 190px;
		}
	}
}

/*
item Show
*/
body{
	background-color: #f2f2f2;
}
.item-info {
	width: 100%;
	margin: auto;

	.item-title-and-user{
		background-color: #fff;
		.item-detail-title{
			margin-top: 0px;
			padding-top: 1em;
			padding-bottom: 1em;
			color: #4a4a4a;
			font-size: 15px;
			font-weight:600;
			width: 50%;
			margin-left: 50px;
		}
		.item-detail-username{
			background-color: #fff;
			padding-bottom: 2em;
			border-bottom: 1px solid #C9C9C9;
		}
	}

	img {
		display: inline-block;
		height: auto;
		width: 400px;
	}

	.item-details {

	}

}

.rating-container {
	display: table;
	margin: 0 auto;
	background-color: #fff;
	width: 100%;
	padding-top: 2em;

	.overall-rating {
		font-size: 18px;
		font-family: 'Avenir Next', 'Avenir', sans-serif;
		font-weight: 400;
		display: table;
		margin: 0 auto;
		color: #419bf9;
		margin-bottom: 10px;
	}

	.add-a-rating{
		font-size: 16px;
		background-color: #419bf9;
		padding: 9px 8px;
		border-radius: 3px;
		float: left;
		a{
			color: #fff;
		}
	}

	.rating-by-user {
		font-size: 15px;
		font-family: 'Avenir Next', 'Avenir', sans-serif;
		font-weight: 400;
		display: table;
		margin: 0 auto;

		.rating-info{
      border: 1px solid #DCDCDC;
      width: 105px;
      border-radius: 5px;
      float: right;
      padding: 5px;
      margin-bottom: 10px;
      a{
        color: #419bf9;
				margin-left: 32px;
        &:hover{
          text-decoration: underline;
        }
      }
    .rating{
      color: #EADB1E;
      font-size: 30px;
      margin-bottom: 5px;
      margin-top: 2px;
      }
    }
	}
}

.review-list {
	width: 100%;
	background-color: #fff;
	margin: 0 auto;
	padding-bottom: 2em;


	.item-reviews{
		font-size: 18px;
		font-weight: 500;
		display: table;
		color: #4a4a4a;
		margin-top: 1em;
		margin-bottom: 20px;
		text-transform: none;
		text-align: left;
		line-height: normal;
	}

	.divider{
		border-top: 1px solid #DCDCDC;
		width: 100%;
		margin: 0 auto;
		margin-top: 30px;
	}

	.review-content {
		display: table;
		margin: 0 auto;
		margin-top: 1em;
		text-align: left;
		width: 38%;
		color: #4a4a4a;

		p{
			text-align: left;
			line-height: normal;
		}

		.poster{
			font-size: 16px;
      color: #9B9B9B;
		}
	}
}


.create_review-fields {
	display: table;
	margin: 0 auto;
	padding-top: 2em;

	label{
		font-size: 20px;
		font-weight: 500;
		color: #419bf9;
		margin-bottom: 10px;
	}

	#review_comment {
		display: inline-block;
		margin: 0 auto;
		width: 550px;
		height: 90px;
		font-size: 15px;
		padding: 10px;
		border-radius: 4px;
		border: 1px solid #979797;
		margin-right: -9.5em;
	}

	.review-submit {
		margin-top: 5px;
		.review-button{
			font-size: 13px;
			padding: 8px;
			border: none;
			background-color: #419bf9;
			color: #fff;
			border-radius: 4px;
			cursor: pointer;
			&:hover{
				background-color: #0E84FF;
			}
		}
	}
}


/*
item new
*/
.item-container {
	background-color: #f2f2f2;
	width: 100%;
	padding-top: 1em;

	p{
		text-align: left;
		margin-top: 25px;
	}

	.form-content{
		display: table;
		margin: 0 auto;

	.new-item-form{
		font-weight: 500;
		font-size: 16px;
		color: #4a4a4a;

		.tag-input-box{
			.tag-box{
				width: 130px;
				height: 32px;
				border-radius: 3px;
				border: 1px solid #979797;
				font-size: 13px;
				padding-left: 10px;
				}
			}

			#tag-instruction{
				font-size: 12px;
				margin-top: 7px;
			}

			#add-tag-button{
				border: 1px solid #419BF9;
				border-radius: 3px;
				background-color: #f2f2f2;
				width: 80px;
				height: 32px;
				color: #419BF9;
				font-size: 13px;
				margin-top: 8px;
				cursor: pointer;

				&:hover{
					background-color: #419BF9;
					color: #fff;
				}
			}

			label{
				font-size: 16px;
				margin-top: -5px;
				margin-bottom: 5px;

			}

			.form-title{
				margin-top: 15px;
				margin-bottom: 8px;
				font-weight: 400;
			}

			#item_postal_code{
				width: 575px;
				height: 32px;
				border-radius: 3px;
				border: 1px solid #979797;
				font-size: 13px;
				padding-left: 10px;
			}

			#item_title{
				width: 575px;
				height: 32px;
				border-radius: 3px;
				border: 1px solid #979797;
				font-size: 13px;
				padding-left: 10px;
				margin-bottom: 25px;
			}

			#item_description{
				width: 565px;
				height: 150px;
				border-radius: 3px;
				border: 1px solid #979797;
				font-size: 13px;
				padding: 10px 10px 10px 10px;
				margin-bottom: 5px;
			}

			.countdown{
				font-size: 12px;
				font-weight: 400;
				margin-bottom: 20px;
			}

			.upload-photo{
				width:130px;
				height: 130px;
				background-color: #fff;
				cursor: pointer;
				-webkit-box-shadow: 6px 6px 6px -4px rgba(207,207,207,1);
				-moz-box-shadow: 6px 6px 6px -4px rgba(207,207,207,1);
				box-shadow: 6px 6px 6px -4px rgba(207,207,207,1);
				margin-bottom: 25px;
			}

			.rent-deposit-money-sign{ /*this is the color for the dollar sign for rent/lease/deposit price box*/
				background-color: #419bf9;
				text-align: center;
				border: 1px solid #979797;
				padding:6px 10px 3px 10px;
				float: left;
				font-size: 18px;
				color: #fff;
				font-weight: 600;
				margin-top: -6px;
				margin-right: -1px;
			}

			#actual-price-money-sign{
				background-color: #7ED321;
				text-align: center;
				border: 1px solid #979797;
				padding:6px 10px 3px 10px;
				float: left;
				font-size: 18px;
				color: #fff;
				font-weight: 600;
				margin-top: -6px;
				margin-right: -1px;
			}

			#item_deposit{
				border: 1px solid #979797;
				width: 90px;
				height: 25px;
				margin-bottom: 25px;
				margin-top: -10px;
				padding-left: 10px;
				font-size: 13px;
			}

			#item_prices_attributes_0_amount{
				border: 1px solid #979797;
				width: 90px;
				height: 25px;
				margin-bottom: 25px;
				margin-top: -10px;
				padding-left: 10px;
				font-size: 13px;
			}

			#deposit-title{
				margin-top: 3px;
			}

		}
		.submit-listing{
			width: 120px;
			border: 1px solid #419bf9;
			background-color: #fff;
			border-radius: 5px;
			font-size: 16px;
			font-weight: 600;
			color: #4a4a4a;
			padding: 10px;
			margin-top: 1em;
			margin-bottom:10px;
			cursor: pointer;

			&:hover{
				background-color: #419BF9;
				color: #fff;
			}
		}

		#small-tip{
			font-size: 12px;
			padding-bottom: 5em;
		}
	}
}
.list-title {
	padding: 2em;
	background-color: #fff;
	.item-listing {
		color: #419bf9;
		font-weight: 600;

	}
	.listing-description {
		font-size: 16px;
		font-weight: 400;
		color: #4a4a4a;
	}
}

.listing-selection {
	background-color: #f2f2f2;
	width: 100%;
	height: 500px;

}

/* Listing choices */
.listing-choices{
	padding-top: 5em;
	margin-left: 31%;

	.lease{
		width: 100%;
		margin-bottom: 4em;
		white-space: nowrap;
		a{
			padding: 10px 72px;
		}
	}

	.rent{
		width: 100%;
		margin-bottom: 4em;
		white-space: nowrap;
		a{
			padding: 10px 78px;
		}
	}

	.sell{
		width: 100%;
		margin-bottom: 4em;
		white-space: nowrap;
		a{
			padding: 10px 80px;
		}
	}

	.timeoffer{
		width: 100%;
		margin-bottom: 4em;
		white-space: nowrap;
		a{
			padding: 10px 40px;
		}
	}

	.descriptor{
		padding-left: .5em;
		color: #4a4a4a;
	}

	#lease-descriptor{
		position: relative;
		bottom: 10px;
		padding-left: .5em;
		color: #4a4a4a;
	}

	#lease-descriptor-2{
		position: relative;
		top: 10px;
		left: -358px;
		color: #4a4a4a;
	}


	.lease,.rent,.sell,.timeoffer{
		.listing-button{
			background-color: #fff;
			font-size: 18px;
			border: 1px solid #419BF9;
			border-radius: 3px;
			color: #4a4a4a;

			&:hover{
				background-color: #419BF9;
				color: #fff;
			}
		}

	}
}
