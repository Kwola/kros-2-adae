/*
itemS INDEX/SEARCH
*/

.bootstrap {
  @import "bootstrap-sprockets";
  @import "bootstrap";

	.sell{
		background-color:#7ed321;
		width: 220px;
		margin-top: 4em !important;
		color: #fff;
		font-size: 16px;
		font-weight: 600;
