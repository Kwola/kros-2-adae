/*
itemS INDEX/SEARCH
*/
#items {
	display: block;
	width: 80%;
	margin-left: 18%;
	margin-right: 18%;
}

.item-index {
	display: inline-block;
	width: 70%;
	padding: 1em;
	background-color: #419bf9;
	opacity: 0.75;
	margin-bottom: 0.5em;
	text-align: center;
}

/*
item Show
*/

.item-info {
	width: 95%;
	margin: auto;

	img {
		display: inline-block;
	}

	.item-details {
		display: inline-block;
		width: 35%;
		vertical-align: top;
		margin-left: 3em ;
	}

}

.rating-info {
	display: inline-block;
	vertical-align: top;
	margin: auto;
	width: 40%;

	.overall-rating {
		display: block;
		vertical-align: top;
		font-size: 25px;
		font-family: 'Avenir Next', 'Avenir', sans-serif;
		font-weight: 400;
		text-transform: uppercase;
		text-align: right;


		margin-left: 5em;
		margin-top: 0.25em;
		margin-bottom: 0.5em;
	}

	.rating-by-user {
		display: block;
		float: right;
		vertical-align: top;
		font-size: 20px;
		font-family: 'Avenir Next', 'Avenir', sans-serif;
		font-weight: 400;
		text-transform: uppercase;
		width: auto;
		margin-bottom: 1em;
	}
}

.item-reviews {
	display: inline-block;
	font-size: 26px;
	font-family: 'Avenir Next', 'Avenir', sans-serif;
	font-weight: 400;
	text-transform: uppercase;

	margin-left: 16em;
	margin-bottom: 0.75em;
}

#review-list {
	display: block;
	width: 50%;
	margin: 0 auto;

	.review {
		display: block;
		padding: 1em;
		background-color: #419bf9;
		opacity: 0.75;
		margin-bottom: 0.5em;
		text-align: center;
	}
}

.create-review {
	display: inline-block;
	font-size: 26px;
	font-family: 'Avenir Next', 'Avenir', sans-serif;
	font-weight: 400;
	text-transform: uppercase;
	margin-left: 18em;
	margin-bottom: 0.75em;

}

.create_review-fields {
	display: block;
	width: 50%;
	margin: 0 auto;

	#review_comment {
		display: inline-block;
		width: 100%;
		height: 5em;
	}

	.review-submit {
		margin-top: 1em;
		margin-bottom: 5em;
	}
}


/*
item new
*/
.item-container {
	background-color: #f2f2f2;
	width: 100%;
	padding-top: 1em;

	p{
		text-align: left;
		margin-top: 25px;
	}

	.form-content{
		display: table;
		margin: 0 auto;

	.new-item-form{
		font-weight: 500;
		font-size: 16px;
		color: #4a4a4a;

		.tag-input-box{
			.tag-box{
				width: 130px;
				height: 32px;
				border-radius: 3px;
				border: 1px solid #979797;
				font-size: 13px;
				padding-left: 10px;
				}
			}

			#tag-instruction{
				font-size: 12px;
				margin-top: 7px;
			}

			#add-tag-button{
				border: 1px solid #419BF9;
				border-radius: 3px;
				background-color: #f2f2f2;
				width: 80px;
				height: 32px;
				color: #419BF9;
				font-size: 13px;
				margin-top: 8px;
				cursor: pointer;

				&:hover{
					background-color: #419BF9;
					color: #fff;
				}
			}

			label{
				font-size: 16px;
				margin-top: -5px;
				margin-bottom: 5px;
			}

			.form-title{
				margin-top: -5px;
				margin-bottom: 8px;
				font-weight: 400;
			}

			#item_postal_code{
				width: 575px;
				height: 32px;
				border-radius: 3px;
				border: 1px solid #979797;
				font-size: 13px;
				padding-left: 10px;
			}

			#item_title{
				width: 575px;
				height: 32px;
				border-radius: 3px;
				border: 1px solid #979797;
				font-size: 13px;
				padding-left: 10px;
				margin-bottom: 25px;
			}

			#item_description{
				width: 565px;
				height: 150px;
				border-radius: 3px;
				border: 1px solid #979797;
				font-size: 13px;
				padding: 10px 10px 10px 10px;
				margin-bottom: 25px;
			}

			#item_image{
				width:130px;
				height: 130px;
				background-color: #fff;
			}

			.rent-deposit-money-sign{ /*this is the color for the dollar sign for rent/lease/deposit price box*/
				background-color: #419bf9;
				text-align: center;
				border: 1px solid #979797;
				padding:6px 10px 3px 10px;
				float: left;
				font-size: 18px;
				color: #fff;
				font-weight: 600;
				margin-top: -6px;
				margin-right: -1px;
			}

			#actual-price-money-sign{
				background-color: #7ED321;
				text-align: center;
				border: 1px solid #979797;
				padding:6px 10px 3px 10px;
				float: left;
				font-size: 18px;
				color: #fff;
				font-weight: 600;
				margin-top: -6px;
				margin-right: -1px;
			}

			#item_deposit{
				border: 1px solid #979797;
				width: 90px;
				height: 25px;
				margin-bottom: 25px;
				margin-top: -10px;
				padding-left: 10px;
				font-size: 13px;
			}

			#item_prices_attributes_0_amount{
				border: 1px solid #979797;
				width: 90px;
				height: 25px;
				margin-bottom: 25px;
				margin-top: -10px;
				padding-left: 10px;
				font-size: 13px;
			}

		}
	}
}
.list-title {
	margin-bottom: 40px;
	margin-top: 40px;
	.item-listing {
		color: #419bf9;
		font-weight: 600;

	}
	.listing-description {
		font-size: 16px;
		font-weight: 500;
		color: #646464;
	}
}

.listing-selection {
	background-color: #f2f2f2;
	width: 100%;
	height: 500px;

}

