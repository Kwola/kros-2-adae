#items {
  margin-left: 15px;
  margin-bottom: 0px;

  #map-canvas{
    position: absolute;
    z-index: 0 !important;
    height: 92vh;
    width: 50%;
    top: 60px;
    right: 0;
    //background-image: asset-url('coming-soon-map.png');
    //background-size: cover;
    //background-position: center;
  }

  #item-feed-container {
    height: 90vh;
    overflow-y: scroll;
    position: relative;
    margin-right: 10px;
    margin-top: 10px;
    margin-bottom: 10px;
    width: 48%;

    #pagination-div {
			margin-top: 15px;
			padding-bottom: 15px;
      .pagination {

        .current {
          margin-right: 5px;
          padding: 4px 10px 2px 10px;
          background: #419bf9;
					color: #fff;
					border-radius: 70%;
					font-style: normal;
					font-weight: 500;
        }

        a {
          margin-right: 5px;
          padding: 3px 9px 2px 10px;
          border: 1px solid #979797;
					background-color: #fff;
					color: #419bf9;
					border-radius: 70%;

					&:hover{
						color: #fff;
						background-color: #419bf9;
						transition: all .3s ease-in-out;
					}
        }

				.next_page{
					padding: 3px 9px 2px 10px;
				}

				.previous_page{
					padding: 3px 9px 2px 10px;
				}

				.disabled{
					color: #dcdcdc;
					padding: 3px 9px 2px 10px;
          border: 1px solid #dcdcdc;
					border-radius: 70%;
					margin-right: 5px;
				}
      }
    }

    #item-collection {
      -moz-column-count: 2;
      -webkit-column-count: 2;
      column-count: 2;
	  	-webkit-column-width: 100%;
      -moz-column-width: 100%;
      column-width: 100%;

      .item-index {
    		margin-bottom: 10px;
    		display: inline-block;
        width: 100%;

		.item-wrap {
		  background: rgba(000, 000, 000, 0.7);
		  width: 100%;
		  height: 80px;
		  margin-top: 120px;

		  #item-title {
			text-align: left;
			color: #fff;
			font-size: 14px;
			font-weight: 500;
			margin-left: 15px;
			padding-top: 10px;
			line-height: normal;
      text-overflow: ellipsis;
		  }
		  .tag-container{
			float: right;
			height: 20px;
			width: 200px;
			margin-top: 20px;

		    #tags{
			  color: #fff;
			  font-size: 10px;
			  text-align: right;
			  margin-right: 5px;
		    	}
		  	}
	    	}
    	}
  	}
  }
}
/*media screen parameters for listing feed and item page*/
