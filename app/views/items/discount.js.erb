<% if @discount %>
  $('#discount_used').val(true);

  if ($('#subtotal').val()){
    var subtotal = parseFloat($('#subtotal').val().substr(1, $('#subtotal').val().length));
    var discount = subtotal * 0.05;
    $('#discount-price').val(discount);
  } 
<% else %>
  $('#discount_used').val(false);
<% end %>
