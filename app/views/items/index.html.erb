<body>
	<div class="search-bar">
		<%= form_tag items_path, method: :get, authentication: false, id: 'search-form' do %>
			<%= text_field_tag :search, params[:search]  %>
			<button class="search-bar-label">Find an Item</button>
		<% end %>
	</div>


	<div id="items">
		<%= render partial: "/items/items", locals: {items: @items} %>
	</div>
</body>
