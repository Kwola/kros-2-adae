<%= include_gon %>
<%= stylesheet_link_tag "items" %>
<body>
	<div id="items">
		<div class="switch">
		<% if signed_in? && @user.confirmed? && @user.sign_in_count == "1"  %>
	    		<a class="share-item" href="/listings" data-step="1" data-intro="This is the listings!">All Listings</a>
	    		<a class="share-request" href="/shoutouts" data-step="2" data-intro="This is the shoutouts!">All Shout Outs</a>
	    <% else %>
	    	<%= link_to "All Listings", items_path, class: "share-item" %>
	    	<%= link_to "All Shout Outs", requests_path, class: "share-request" %>
		<% end %>
		</div>
				<div ></div>
		<div id="item-feed-container">
	    	<div id="item-collection">
				<% @items.each do |item| %>
					<%= render partial: "/items/items", :locals => {:item => item}  %>
				<% end %>
	    	</div>
			<div id="pagination-div">
				<%= will_paginate @items, :next_label => "&#10095;", :previous_label => "&#10094;" %>
			</div>
		</div>
		<div id="map-canvas"></div>
	</div>
</body>
<%= javascript_include_tag "map" %>
