<%= form_for([@item, @rating]) do |f| %>
    <% if @rating.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

        <ul>
        <% @rating.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

<div class="question-area">
  <h4 class="item-rating-qs">On a scale of 5, how did you feel about the listing?</h4>
  <div class="radio-buttons">
    <span class="field">
        <%= f.radio_button :score, 5 %>
        5
    </span>

    <span class="field">
        <%= f.radio_button :score, 4 %>
        4
    </span>

    <span class="field">
        <%= f.radio_button :score, 3 %>
        3
    </span>

    <span class="field">
        <%= f.radio_button :score, 2 %>
        2
    </span>

    <span class="field">
        <%= f.radio_button :score, 1 %>
        1
    </span>

    <span class="field">
        <%= f.radio_button :score, 0 %>
        0
    </span>
  </div>
</div>
  <%= f.submit 'Create Rating', :class => 'rating-button' %>
  <% end %>
