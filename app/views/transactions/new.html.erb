<%= stylesheet_link_tag "items" %>
<script>
  function qtyLength() {
    var lngth = $('select[name="transaction[length]"] option:selected').val();
    var qty = $('#qty').val();
    $('#times').val(qty);

    if (qty <= 1) {
      $('#length').val(lngth);
    }else if (qty > 1) {
      $('#length').val(lngth + 's');
    }else  {
      $('#length').val(lngth - 's');
    }
  }
  function updateQty() {
    qtyLength();
    var qty = $('#qty').val();
    var total = <%= @price.amount %> * qty;
    $('#subtotal').val('$' + total);
    $('#transaction_total_price').val('$' + total);
  }
  function updateLength() {
    qtyLength();
  }

</script>

<div class="item-info" id="itemInfo">
  <% @pictures.each do |picture| %>
    <div class="photos">
      <%= image_tag(picture.image.url(:med), class:"cover-photo") %>
    </div>
  <% end %>
