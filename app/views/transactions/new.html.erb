<%= stylesheet_link_tag "transactions" %>
<script>
  function qtyLength() {
    var lngth = $('select[name="transaction[length]"] option:selected').val();
    var qty = $('#qty').val();
    $('#times').val(qty);

    if (qty <= 1) {
      $('#length').val(lngth);
    }else if (qty > 1) {
      $('#length').val(lngth + 's');
    }else  {
      $('#length').val(lngth - 's');
    }
  }
  function updateQty() {
    qtyLength();
    var qty = $('#qty').val();
    var total = (<%= @price.amount %> * qty);
    var fee = ((total * 0.029) + 0.30);
    $('#subtotal').val('$' + total);
    total = (total + fee).toFixed(2);
    $('#transaction_total_price').val('$' + total);
  }
  function updateLength() {
    qtyLength();
  }

</script>

