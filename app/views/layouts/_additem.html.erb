<div class="input-group">
	<span class="input-group-btn">
		<button class="btn btn-success addedPopup" data-toggle="modal" data-target="#addedPopup-modal<%=item.id%>" type="submit" >
			Add
		</button>
	</span>
</div>

<!-- Modal -->
<div class="modal fade addItemModal" id="addedPopup-modal<%= item.id%>" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Success!</h4>
      </div>
      <div class="modal-body">
        <p id="modal-message"></p>
      </div>  
  </div>
</div>