<%= stylesheet_link_tag "conversations" %>

<div class="message-list">
  <div class="ui list">
    <% @transactions.each do |transaction| %>
      <% user = User.find(transaction.seller_id) %>
      <% item = Item.find(transaction.item_id) %>

      <div class="message">
        <div class="inbox-img">
    			<%=link_to image_tag(item.photo_url), item_path(item) %>
    		</div>

    		<li class="listings">
          <div class="user-avatar-container"> <%= link_to image_tag(user.avatar(:med), class: "user-avatar"), user_path(user) %> </div>
    			<label class="item-detail" id="item-title"> NAME Would Like To Try: </label>
          <label class="item-detail" id="item_description"><%= item.description %></label>
    			<div class="item-accept-deny-buttons">
            <%= link_to 'Reply', conversations_path(sender_id: transaction.buyer_id,
            recipient_id: transaction.seller_id), method: 'post', class: "reply-transaction"%>
    		  </div>
    		</li>
      </div>
    <% end %>
  </div>
</div>
