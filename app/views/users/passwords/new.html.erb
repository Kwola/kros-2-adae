<%= stylesheet_link_tag "items" %>
<div class="bootstrap" style="margin-top: 50px;">
  <div class="col-md-4 col-md-push-4">
  <center><h2 style="color:#419bf9;">Forgot your password?</h2></center>
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  
	  <span><%= devise_error_messages! %></span>
	  <div> 
	  	<%= f.email_field :email, autofocus: true, placeholder: "Email", :class => "form-control" %>
	  </div>
	  </br>
	  <p class="actions shared_links">
	    <%= f.submit "Send me reset password instructions", class: "btn btn-large btn-primary" %>
	  </p>
	<% end %>
	<span><%= render "users/shared/links" %></span>
  </div>
</div>



