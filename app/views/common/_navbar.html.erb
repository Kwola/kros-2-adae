<%= stylesheet_link_tag "navbar" %>

<nav class="nav" role="navigation" id="home-navbar">
    <div class="adae-home">
      <a href="<%= root_path %>" title="home">
        <div class="home-logo">
          <%= image_tag("adaelogoblue.png")%>
        </div>
      </a>
    </div>
    <div class="search-bar">
      <form class="search-form" action="/search">
        <input type="text" name="search_text" class="search-field-placeholder" id="search-form" placeholder="What are you looking for? ex. Texbooks, Video Games, Tutors...">
      </form>
    </div>
    <% if current_page?(new_item_path) %>
      <%= link_to "Listings", items_path, class: "share-item" %>
    <% else %>
      <%= link_to 'List an Item', new_item_path, class: "share-item" %>
    <% end %>

    <div class="user-info">
      <% if current_user %>
        Signed in as <%#= link_to current_user.full_name, user_path(current_user) %>. <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: "logout") %>
      <% else %>
        <%= link_to('Sign Up', new_user_registration_path, class: "signup")  %>
        <%= link_to('Login', new_user_session_path ,class: "login")  %>
      <% end %>
    </div>
</nav>
