<script>
$('.signin-cancel').click(function() {
  $('#shareSigninModal').modal('toggle');
});

</script>
<div class="modal fade" id="shareSigninModal" tabindex="-1" role="dialog" aria-labelledby="shareSigninModal" aria-hidden="true">
    <span type="button" class="signin-cancel">X</span>

    <div class="share-modal-content-container">
      <%#= image_tag("anonprofile.png", size: "70x70", class: "avatar-image") %>
      <br/>
      
      <div class="signin-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", :class => "form-control" %>
        </div>

        <div class="field">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "input-box", id: "password" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div id="signin-start">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
      </div>
    </div>
</div><!-- /.modal -->
