<%= stylesheet_link_tag "landing" %>
<%= stylesheet_link_tag "modals" %>
<div class="signup-modal"></div>
<div class="signin-modal"></div>

<title>adae - Share what you have, get what you want.</title>

<div id="landing">
  <div class="navlanding">
    <a class="faq" href="/faq">FAQ</a>
    <% unless signed_in? %>
      <%= link_to 'Sign Up', {remote: true, controller: "home", action: "signup_modal"}, id: "nav-signup-btn", class: "signup" %>
      <%= link_to 'Log In', {remote: true, controller: "home", action: "signin_modal"}, id: "nav-signin-btn", class: "login" %>
    <% end %>
  </div>
	<div id="landing-container">
		<div class="logo-name-container">
			<%= image_tag "logo-lg-white.png", id: "logo" %>
			<h1 id="welcome">adae</h1>
		</div>
		<div id="summary-container">
			<p class="summary">Share what you have, get what you want. <br> Peer-to-Peer platform that is safe and secure.</p>
		</div>
    <div class="coming-soon">
      <a target="_blank" href="https://itunes.apple.com/ca/app/adae/id1084039853?mt=8"><%= image_tag "App-Store.png", class: "coming-soon" %></a>
      <a target="_blank" href="https://play.google.com/store/apps/details?id=com.adae.justinelee.adaecompanion&hl=en"><%= image_tag "Play-Store.png", class: "coming-soon" %></a>
    </div>

    <a href="<%= items_path %>"><button class="explore">Browse</button></a>

    <div id="search-field">
      <div class="search-bar">
        <form class="search-form" action="/search">
          <input type="text" name="search_text" class="search-field-placeholder" id="search-form" placeholder="What are you looking for? ex. Texbooks, Video Games, Tutors...">
          <button class="search-bar-label">Go</button>
        </form>
      </div>
	   </div>
  </div>
</div>

<div id="key-points-container">
