<div id="key-points-container">
		<div class="key-points-section">
			<%= image_tag("fruitbox.png") %>
			<h4 class="key-points-header">Select your craving</h4>
			<p class="key-points-summary">
        		Choose the box size that best suits your fruit cravings!
        		We adjust to your schedule by offering a subscription service.
        	</p>
		</div>
		<div class="key-points-section">
			<%= image_tag("meeting.png", size: "90x90") %>
			<h4 class="key-points-header">For delivery</h4>
			<p class="key-points-summary">
				Tell us when and a fruit ninja will deliver your fruit craving straight to your door!
        	</p>
		</div>
		<div class="key-points-section">
			<%= image_tag("money_transfer.png", size: "90x90") %>
			<h4 class="key-points-header">Quick & Easy</h4>
			<p class="key-points-summary">
        		Never worry about payment hassle again!
        	</p>
		</div>
</div>

<button class="how-it-works" onclick="$('.how-it-works-toggle').slideToggle();">How It Works</button>

